<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/leave_message_dialog_background_shape"
        >

        <LinearLayout
            android:id="@+id/leave_message_dialog_layout_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/leave_message_dialog_background_layout_shape"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"

            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/error_ffffff"
                android:visibility="invisible"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="请输入您的留言信息"
                android:textColor="@color/white"
                android:gravity="center"
                />


            <ImageView
                android:id="@+id/leave_message_dialog_layout_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/error_ffffff"
                android:layout_marginRight="8dp"
                android:padding="3dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/leave_message_dialog_layout_02"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/leave_message_dialog_layout_01"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="#737373"
                android:textSize="13sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/government_purchase_fast_track_procedure_edittext_shape"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leave_message_dialog_layout_03"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/leave_message_dialog_layout_02"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话/邮箱："
                android:textColor="#737373"
                android:textSize="13sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/government_purchase_fast_track_procedure_edittext_shape"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leave_message_dialog_layout_04"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/leave_message_dialog_layout_03"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID号："
                android:textColor="#737373"
                android:textSize="13sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/government_purchase_fast_track_procedure_edittext_shape"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leave_message_dialog_layout_05"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/leave_message_dialog_layout_04"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您希望添加的版块："
                android:textColor="#737373"
                android:textSize="13sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/government_purchase_fast_track_procedure_edittext_shape"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leave_message_dialog_layout_06"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/leave_message_dialog_layout_05"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请阐述您的建议："
                android:textColor="#737373"
                android:textSize="13sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/government_purchase_fast_track_procedure_edittext_shape"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/leave_message_dialog_layout_dissmess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="13sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/leave_message_dialog_layout_06"
            android:layout_centerHorizontal="true"
            android:background="#ce2538"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            />
    </RelativeLayout>

</LinearLayout>