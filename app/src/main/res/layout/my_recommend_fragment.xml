<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <ImageView
            android:id="@+id/my_reconmmend_fragment_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_image_black"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            />


        <TextView
            android:id="@+id/my_reconmmend_fragment_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首次推荐礼品"
            android:textColor="#737373"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ListView
                android:id="@+id/my_reconmmend_fragment_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:divider="@color/white"
                android:dividerHeight="10dp"
                ></ListView>



            <TextView
                android:id="@+id/my_reconmmend_fragment_particulars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看兑换详情"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:background="#737373"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />


        </LinearLayout>

    </ScrollView>




</LinearLayout>