<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        >


        <ImageView
            android:id="@+id/userinteger_inquire_gridadapter_imageurl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_integer_image_03"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/userinteger_inquire_gridadapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M145684654684"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/userinteger_inquire_gridadapter_imageurl"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/userinteger_inquire_gridadapter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分1032135"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/userinteger_inquire_gridadapter_imageurl"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/userinteger_inquire_gridadapter_lible"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            />
    </RelativeLayout>
</LinearLayout>