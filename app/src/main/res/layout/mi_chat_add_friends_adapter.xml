<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <ImageView
            android:id="@+id/mi_chat_add_friends_adapter_imageurl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mi_people_chat_fragment_image_30"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/mi_chat_add_friends_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="angela"
            android:layout_toRightOf="@+id/mi_chat_add_friends_adapter_imageurl"
            android:layout_marginLeft="8dp"
            android:textSize="13sp"
            android:textColor="#737373"
            />

        <TextView
            android:id="@+id/mi_chat_add_friends_adapter_content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="今天百次幂商城有搞活动了！快点去和我。。。"
            android:layout_below="@+id/mi_chat_add_friends_adapter_lible"
            android:layout_alignLeft="@+id/mi_chat_add_friends_adapter_lible"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            android:layout_below="@+id/mi_chat_add_friends_adapter_content"
            android:layout_alignLeft="@+id/mi_chat_add_friends_adapter_content"
            android:layout_marginTop="2dp"
            />

        <ImageView
            android:id="@+id/mi_chat_add_friends_adapter_state"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mi_people_chat_fragment_image_29"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</LinearLayout>