<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/fragment_pinpai_lv_item_imageurl"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:src="@mipmap/mianmo_gouwuche"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【天天特价】正品韩国品驰长效补水修复去痘印面膜贴..."
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:textColor="#242E36"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包邮"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:textColor="#AAAAAA"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />


        <Button
            android:layout_width="85dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"
            android:background="@drawable/btn_jifen_shape"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="积分抵扣11%"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥67.94"
                android:textSize="19sp"
                android:textColor="#E20C26"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/goods_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31人付款"
                android:textSize="14sp"
                android:textColor="#AFAFAF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/good_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评率95%"
                android:textSize="11sp"
                android:textColor="#AFAFAF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#A3A3A3"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                />



        </LinearLayout>


    </LinearLayout>


</LinearLayout>
