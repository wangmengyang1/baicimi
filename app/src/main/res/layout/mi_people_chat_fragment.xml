<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/mi_people_chat_fragment_imageurl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/check_one_fragment_listview_image_03" />

        <TextView
            android:id="@+id/mi_people_chat_fragment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/mi_people_chat_fragment_imageurl"
            android:text="SUSAN"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/mi_people_chat_fragment_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mi_people_chat_fragment_username"
            android:layout_below="@+id/mi_people_chat_fragment_username"
            android:text="GuangZhou,China"
            android:textSize="13sp" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mi_people_chat_fragment_image_01" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:id="@+id/mi_people_chat_fragment_gridview_first_layout_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <GridView
                android:id="@+id/mi_people_chat_fragment_gridview_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numColumns="4"></GridView>


            <LinearLayout
                android:id="@+id/mi_people_chat_fragment_gridview_first_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mi_people_chat_fragment_gridview_first"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/down_image_black_02" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="#737373" />


            </LinearLayout>


        </RelativeLayout>

        <GridView
            android:id="@+id/mi_people_chat_fragment_gridview_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:numColumns="4"
            android:layout_alignParentBottom="true"

            ></GridView>

    </RelativeLayout>


    <ImageView
        android:id="@+id/mi_people_chat_fragment_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:padding="6dp"
        android:src="@drawable/mi_people_chat_fragment_image_02" />

</LinearLayout>