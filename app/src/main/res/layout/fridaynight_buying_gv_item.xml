<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:Android="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >

        <ImageView
            android:id="@+id/fridaynight_buying_gv_item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/zhouwu_img2"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/tv_buying_goods_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="官方授权  自然堂乐园保湿补水保湿补水"
            android:textSize="12sp"
            android:textColor="#797979"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            >

            <TextView
                android:id="@+id/use_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥100"
                android:textColor="#A7A7A7"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />


            <View
                android:layout_width="37dp"
                android:layout_height="1dp"
                android:background="#A7A7A7"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                ></View>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 39"
                android:textSize="18sp"
                android:textColor="#FE566F"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                />

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/jifen_picture"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                ></View>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="54543人购买"
                android:textColor="#9F9F9F"
                android:layout_gravity="center_vertical"
                android:textSize="9dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/fridaynight_buying_gv_item_subtract"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jian_wubainkaugn_image"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/fridaynight_buying_gv_item_number_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"

                />
            <ImageView
                android:id="@+id/fridaynight_buying_gv_item_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jia_wubiangkuang_image"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                />



            <Button
                android:id="@+id/fridaynight_buying_gv_item_rushtopurchase"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="#F12A2C"
                android:text="立即抢购"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />


        </LinearLayout>


    </LinearLayout>




</LinearLayout>
