<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/order_form_fragment_clicle_shape"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <TextView
            android:id="@+id/add_receipt_dialog_lible_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定用主题封面：\''七月菊花香季\''"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/add_receipt_dialog_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="替换原主题封面：\''宁菲圣诞礼遇\''吗？"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_receipt_dialog_lible_first"
            android:layout_marginTop="4dp"
            />



        <LinearLayout
            android:id="@+id/add_receipt_dialog_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/add_receipt_dialog_lible"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="注：原主题封面\''宁菲圣诞礼遇\''尚未到时，如替换将扣除20积分赔偿积分。"
                android:gravity="center"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/add_receipt_dialog_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/add_receipt_dialog_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仍然替换"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#eeeeee"
                />
            <TextView
                android:id="@+id/add_receipt_dialog_dissmess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不替换"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#eeeeee"
                android:layout_marginLeft="15dp"
                />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>