<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/person_centered_acthentication_fragment_gridview_shape"
        >
        <GridView
            android:id="@+id/person_centered_acthentication_fragment_grdiview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            ></GridView>
        <View
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/person_centered_acthentication_fragment_grdiview"
            />

    </RelativeLayout>


</LinearLayout>