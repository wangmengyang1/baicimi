<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/user_supplier_fragment_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@drawable/back_image_black" />

        <TextView
            android:id="@+id/user_supplier_fragment_lible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="百次幂商城"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:padding="6dp"
            android:src="@drawable/brand_fragment_second_image_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_supplier_fragment_scanning"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/brand_fragment_second_image_12" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/brand_fragment_second_edittext_layer_list"
            android:hint=""
            android:paddingLeft="8dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="搜索"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#e1e1e1" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_supplier_image_01" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#99de4c4c"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="日化领域"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#99ff8b64"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="美妆领域"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#99019966"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="个人用品领域"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#993d8bbb"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="母婴用品领域"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#737373" />

                <TextView
                    android:id="@+id/user_supplier_fragment_libles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="个人用品领域"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#ff6531"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#737373" />




            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:src="@drawable/user_supplier_image_02"
                    android:scaleType="fitXY"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我们的供应链尊重工人，保护环境"
                    android:textSize="13sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="我们之和符合要求的供应商合作"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="#737373"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="我们的日化用品在销售之前都经过不同的程序。\n为了确保我们的生产线满足相应的老公条件，产\n品安全水平和环保要求，我们采用的系统能够让\n我们统一掌握日化用品的原料采集，萃取，调配，\n生产，包装的地点和过程。"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="我们超过55%的工厂位于德国，日本等\n生产研发技术领先的国家，其余的位于中\n国上海，广州等发达城市。"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="#737373"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_supplier_image_03"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年，我们与368家的169个供应商展开合作"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#737373"
                />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="原料提供"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="萃取"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="调配"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="内料生产"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="内包开发"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="包装印刷"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="综合出品"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="56"
                    />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_supplier_image_04"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="为了确保《行为准则》的执行，我们进行评估，\n提出改善计划，\n并持续跟踪生产商和供应商的执行情况。"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审计"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="我们与内外部审计机构合作，对供应商进行评估，\n2016年，我们完成了超过5000万项审计。"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提升计划"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="一旦出现供应商不遵守《行为准则》的情况，\n我们会提出改善方案并督促供应商进行整改，\n加入供应商在此期间未完成整改，\n我们就终止与其供应商的合作。"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_supplier_image_04"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="培训"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="针列我们的供应商和业务团队的有关可持续性标准的\n培-UI防案补充完备了我们的审计和改进计划。我们设\n计了行为准则、工艺和原材料的不同领域的培训，以\n准进可持续生产，并提高列诸如性别平等和工会价值\n等敏感话题的认识"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长期可持续发展的生产线"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="我们努力使生产线符合可持续发展的要求，促使其对\n工人、企业家、非政府组织、工会和政府等有关各方\n产生正面影响。\n\n为此我们创立了本地工作平台（社团），方便有关各方\n展开合作与列话。目前在德国、日本、中国的供应商\n社团已经在运行。"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_supplier_image_03"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们与多家组织合作，\n致力于保护工人的劳动权益和工作环境。"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="#737373"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="+ IndustriALL Global Union"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="+ 国际劳工组织（OIT）"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="+ Ethical Trading Initiative"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="+ 联合国全球契约"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="+ Sustainable Apparel Coalition(SAC)"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />


            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="#737373"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们承诺会继续努力，\n确保在供应链的每一个环节都\n实现可持续发展。"
                android:textSize="13sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="#737373"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>