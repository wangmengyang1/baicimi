<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/re_share"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textColor="#7C7C7C"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_below="@id/re_share"
        ></View>


    <RelativeLayout
        android:id="@+id/re_yingyang"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_baoyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成分和保养"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textColor="#7C7C7C"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_below="@id/re_yingyang"
        ></View>



    <RelativeLayout
        android:id="@+id/re_chicun"
        android:layout_width="match_parent"
        android:layout_below="@+id/view2"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_chiucun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尺寸指南"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textColor="#7C7C7C"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_below="@id/re_chicun"
        ></View>

    <RelativeLayout
        android:id="@+id/re_fuwu"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_below="@id/view3"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_fuwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户服务"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textColor="#7C7C7C"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_below="@id/re_fuwu"
        ></View>


</LinearLayout>