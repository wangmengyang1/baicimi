<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/user_0">

                <ImageView
                    android:id="@+id/user_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/user_integral_gridview_item_image_41ss" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="用户名称"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />


                <RelativeLayout
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/user_head"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@id/user_name">

                    <ImageView
                        android:id="@+id/user_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/user_vip" />



                </RelativeLayout>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:layout_centerHorizontal="true"
                    android:text="勿须烦恼，终有溺水替沧海，抛却纠..."
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/login_back"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/fanhui_touming_image"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="4dp"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/guanzhu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/yanjing"
                    android:drawablePadding="-30dp"
                    android:layout_marginLeft="29dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/rentou"
                    android:drawablePadding="-30dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/wenzhang"
                    android:drawablePadding="-35dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/ji"
                    android:drawablePadding="-35dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/fensi"
                    android:drawablePadding="-30dp"
                    android:layout_marginLeft="29dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/gongju"
                    android:drawablePadding="-30dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/aixin"
                    android:drawablePadding="-35dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="153万"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/zhaiyao"
                    android:drawablePadding="-35dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F6F6F6"
                ></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCCCCC"></View>

                    <CheckBox
                        android:id="@+id/all_check"
                        style="@style/MMTabButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="center"
                        android:text="全部内容"
                        android:textColor="@drawable/star_text_selector"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD"></View>

                    <CheckBox
                        android:id="@+id/picture_check"
                        style="@style/MMTabButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我的图片"
                        android:textColor="@drawable/star_text_selector"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCCCCC"></View>


                    <CheckBox
                        android:id="@+id/essay_check"
                        style="@style/MMTabButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我的文章"
                        android:textColor="@drawable/star_text_selector"
                        android:textSize="14sp" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD"></View>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCCCCC"></View>

                    <CheckBox
                        android:id="@+id/xiangce_check"
                        style="@style/MMTabButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我的相册"
                        android:textColor="@drawable/star_text_selector"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD"></View>

                    <CheckBox
                        android:id="@+id/zan_check"
                        style="@style/MMTabButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="赞"
                        android:textColor="@drawable/star_text_selector"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#CCCCCC"></View>


                    <CheckBox
                        android:id="@+id/shezhi_check"
                        style="@style/MMTabButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="设置"
                        android:drawablePadding="-30dp"
                        android:textColor="@drawable/star_text_selector"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"></View>



            <FrameLayout
                android:id="@+id/personal_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
