<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/love_donate_fragment_list_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="无偿资助-----6岁孩子重返校园"
            android:textColor="#737373"
            />

        <ImageView
            android:id="@+id/love_donate_fragment_list_adapter_imageurl"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:src="@drawable/love_donate_image_08"
            android:layout_below="@+id/love_donate_fragment_list_adapter_lible"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/love_donate_fragment_list_adapter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="河南信阳小山村一个6岁男孩豆豆，父母早亡，由年迈的奶奶抚养长大，家境贫寒，无力承担读书的费用。"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/love_donate_fragment_list_adapter_imageurl"
            android:layout_alignTop="@+id/love_donate_fragment_list_adapter_imageurl"
            android:layout_marginLeft="10dp"
            />


        <com.baicimi.view.CircleImageView
            android:id="@+id/love_donate_fragment_list_adapter_userimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/love_donate_image_07"
            android:layout_alignBottom="@+id/love_donate_fragment_list_adapter_imageurl"
            android:layout_alignLeft="@+id/love_donate_fragment_list_adapter_content"
            />

        <TextView
            android:id="@+id/love_donate_fragment_list_adapter_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="小明"
            android:layout_toRightOf="@+id/love_donate_fragment_list_adapter_userimage"
            android:layout_alignTop="@+id/love_donate_fragment_list_adapter_userimage"
            android:layout_marginLeft="6dp"
            />

        <TextView
            android:id="@+id/love_donate_fragment_list_adapter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="GuangZhou,China"
            android:layout_toRightOf="@+id/love_donate_fragment_list_adapter_userimage"
            android:layout_alignBottom="@+id/love_donate_fragment_list_adapter_userimage"
            android:layout_marginLeft="6dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/love_donate_fragment_list_adapter_username"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dingzi"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="345454"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>