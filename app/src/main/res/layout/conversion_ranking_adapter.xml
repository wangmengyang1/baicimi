<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/every_conversion_adapter_shape"
        android:padding="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/conversion_ranking_adapter_imageurl"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:src="@drawable/home_integer_conversion_07"
                android:scaleType="fitXY"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_toRightOf="@+id/conversion_ranking_adapter_imageurl"

                >

                <TextView
                    android:id="@+id/conversion_ranking_adapter_lible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="欧诗漫补水霜"
                    />

                <TextView
                    android:id="@+id/conversion_ranking_adapter_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17890人兑换"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/conversion_ranking_adapter_addattention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+关注"
                    android:textSize="13sp"
                    android:background="@drawable/every_conversion_adapter_shape"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>