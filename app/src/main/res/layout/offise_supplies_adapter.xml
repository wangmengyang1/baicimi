<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:id="@+id/office_supplies_fragment_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柏树针员工名片 50张*2"
            android:textSize="13sp"
            android:textColor="@color/black"
            />

        <View
            android:id="@+id/office_supplies_fragment_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:layout_below="@+id/office_supplies_fragment_lible"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:id="@+id/office_supplies_fragment_imageurl"
            android:layout_width="120dp"
            android:layout_height="76dp"
            android:src="@drawable/office_supplies_adapter_image_01"
            android:layout_below="@+id/office_supplies_fragment_view"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/office_supplies_fragment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥87.80"
            android:layout_toRightOf="@+id/office_supplies_fragment_imageurl"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/red"
            />


        <LinearLayout
            android:id="@+id/office_supplies_fragment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/today_cosmetics_adapter_number_shape"
            android:layout_toRightOf="@+id/office_supplies_fragment_imageurl"
            android:layout_alignBottom="@+id/office_supplies_fragment_imageurl"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/office_supplies_adapter_subtract"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/jian_wukuang_image_01"
                android:background="#f3f3f3"
                />

            <TextView
                android:id="@+id/office_supplies_adapter_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

            <ImageView
                android:id="@+id/office_supplies_adapter_add"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/jia_wukaung_image_02"
                android:background="#f3f3f3"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:textColor="@color/white"
            android:background="@color/red"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_toRightOf="@+id/office_supplies_fragment_layout"
            android:layout_alignBottom="@+id/office_supplies_fragment_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="4dp"
            />

    </RelativeLayout>

</LinearLayout>