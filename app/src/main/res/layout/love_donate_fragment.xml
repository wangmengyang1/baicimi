<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <ImageView
            android:id="@+id/love_donate_fragment_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_image_black"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/love_donate_fragment_libles"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="爱心捐赠"
            android:textColor="#737373"
            android:gravity="center"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/brand_fragment_second_image_13"
            android:padding="6dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#e1e1e1"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/love_donate_image_01"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#77000000"
                    />


                <TextView
                    android:id="@+id/love_donate_fragment_lible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="积聚力量，助力梦想"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百次幂（MICI）联合班宁BNN文化基金共同成立“爱心捐款”项目，\n机和企业，爱心人士的力量，对怀揣梦想与身怀才艺的学生，农\n民等各行各业的能人异士进行资助，帮助他们实现人生梦想。"
                    android:textColor="@color/white"
                    android:layout_below="@+id/love_donate_fragment_lible"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="-15dp"
                android:background="@drawable/order_form_fragment_clicle_shape"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:elevation="8dp"
                >

                <ImageView
                    android:id="@+id/love_donate_fragment_tag"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:src="@drawable/love_donate_image_02"
                    android:layout_centerVertical="true"
                    />



                <LinearLayout
                    android:id="@+id/love_donate_fragment_laout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/love_donate_fragment_tag"
                    android:layout_marginLeft="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="BNN∝MICI爱心捐款"
                            android:textColor="#f196f6"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/dingzi"
                            android:layout_marginLeft="6dp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="323万"

                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="九寨沟风景区"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp"

                        >


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/love_donate_image_03"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="足迹>>"
                            android:textColor="#0282c3"
                            android:layout_marginLeft="4dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="4dp"

                        >


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/love_donate_image_04"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="4008-666666"
                            android:layout_marginLeft="4dp"
                            />

                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="关 注"
                    android:background="@drawable/love_donate_fragment_textview_shape"
                    android:textColor="@color/white"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/love_donate_fragment_laout"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    >

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            >

                            <TextView
                                android:id="@+id/love_donate_fragment_homepage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="6dp"
                                android:text="首页"
                                android:textColor="#0282c3"

                                />
                            <TextView
                                android:id="@+id/love_donate_fragment_underway"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="6dp"
                                android:text="资助进行中"
                                android:textColor="#737373"
                                />

                            <TextView
                                android:id="@+id/love_donate_fragment_accomplish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="6dp"
                                android:text="已完成资助"
                                android:textColor="#737373"
                                />

                            <TextView
                                android:id="@+id/love_donate_fragment_underreview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="6dp"
                                android:text="资助审核中"
                                android:textColor="#737373"
                                />
                            <TextView
                                android:id="@+id/love_donate_fragment_wantsupport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="6dp"
                                android:text="我要资助"
                                android:textColor="#737373"
                                />
                            <TextView
                                android:id="@+id/love_donate_fragment_applysupport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:padding="6dp"
                                android:text="申请资助"
                                android:textColor="#737373"
                                />

                        </LinearLayout>

                    </HorizontalScrollView>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/love_donate_image_05"
                        android:layout_marginLeft="8dp"
                        />


                </LinearLayout>


            </RelativeLayout>


            <FrameLayout
                android:id="@+id/love_donate_fragment_framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                ></FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>