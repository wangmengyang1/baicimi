<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/order_form_fragment_clicle_shape"
        >

        <TextView
            android:id="@+id/pay_password_second_dialog_lible"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="已验证手机：136XXXXXXX1568"
            android:textSize="13sp"
            android:textColor="#737373"
            android:gravity="center"
            android:visibility="invisible"
            />




        <LinearLayout
            android:id="@+id/pay_password_second_dialog_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pay_password_second_dialog_lible"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="           新的登录密码："
                android:textColor="#737373"
                />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                android:textSize="13sp"
                android:padding="4dp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_password_second_dialog_layout_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pay_password_second_dialog_layout"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="请再输一次登录密码:"
                android:textColor="#737373"
                />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                android:textSize="13sp"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_password_second_dialog_layout_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pay_password_second_dialog_layout_02"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="            验证码："
                android:textColor="#737373"
                />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                android:textSize="13sp"
                android:padding="4dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="wrnb"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/pay_password_second_dialog_layout_03"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/pay_password_second_dialog_false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:background="#ff0000"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>