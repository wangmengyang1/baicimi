<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        
        <ImageView
            android:id="@+id/today_cosmetics_adapter_imageurl"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/today_cosmetics_adapter_image_01"
            />


        <TextView
            android:id="@+id/today_cosmetics_adapter_marketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商城价：¥259.00"
            android:textSize="12sp"
            android:textColor="#66656d"
            android:layout_toRightOf="@+id/today_cosmetics_adapter_imageurl"
            android:layout_below="@+id/today_cosmetics_adapter_content"
            android:layout_marginTop="6dp"
            />





        <TextView
            android:id="@+id/today_cosmetics_adapter_discountsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分价：¥159.00"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:layout_toRightOf="@+id/today_cosmetics_adapter_imageurl"
            android:layout_below="@+id/today_cosmetics_adapter_marketPrice"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/today_cosmetics_adapter_image_02"
            android:layout_toRightOf="@+id/today_cosmetics_adapter_discountsPrice"
            android:layout_alignTop="@+id/today_cosmetics_adapter_discountsPrice"
            android:layout_marginLeft="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存：600"
            android:textSize="12sp"
            android:layout_below="@+id/today_cosmetics_adapter_discountsPrice"
            android:layout_alignLeft="@+id/today_cosmetics_adapter_discountsPrice"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/today_cosmetics_adapter_content"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="官方授权 自然堂乐园补水保湿"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/today_cosmetics_adapter_imageurl"
            android:layout_marginTop="4dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/today_cosmetics_adapter_imageurl"
            android:layout_alignBottom="@+id/today_cosmetics_adapter_imageurl"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/today_cosmetics_adapter_number_shape"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/today_cosmetics_adapter_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mins_image_black"
                    android:background="#f3f3f3"
                    android:padding="1dp"
                    />

                <TextView
                    android:id="@+id/today_cosmetics_adapter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"


                    />

                <ImageView
                    android:id="@+id/today_cosmetics_adapter_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_add_black"
                    android:background="#f3f3f3"
                    android:padding="1dp"
                    />

            </LinearLayout>


            <ImageView
                android:id="@+id/today_cosmetics_adapter_shopcup"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/shoping_package_red"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/today_cosmetics_adapter_immediatelyshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即订购"
                android:textColor="@color/white"
                android:background="#f00"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

        </LinearLayout>

        
    </RelativeLayout>
    

</LinearLayout>