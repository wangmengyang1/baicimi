                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="买家投诉商家"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="幂客服介入处理"
                        android:gravity="center"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="投诉完成"
                        android:gravity="right"
                        android:textSize="13sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/after_sale_server_complaint_number_shape"
                        android:text="1"
                        android:gravity="center"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="#ff0000"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="#b5b5b5"
                        />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/after_sale_server_complaint_number_shape_second"
                        android:text="2"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="#b5b5b5"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="#b5b5b5"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/after_sale_server_complaint_number_shape_second"
                        android:text="3"
                        android:gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="订单信息"
                    android:textColor="#010101"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#737373"
                    android:layout_marginTop="6dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="订单编号："
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="1354684213545"
                        android:textColor="#01bed1"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
