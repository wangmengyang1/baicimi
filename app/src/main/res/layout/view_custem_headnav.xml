<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical" >
    
      <com.baicimi.view.MyViewPager
        android:id="@+id/vp_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
      
       <LinearLayout
        android:id="@+id/ll_cotent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_margin="10dp">

        <com.baicimi.ui.NavImgLayout
            android:id="@+id/navlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:checkedimg="@mipmap/img_main_select_pop_d_pressed"
            app:uncheckedimg="@mipmap/img_main_select_pop_d_default"/>

    </LinearLayout>

</FrameLayout>
