<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/cela_interal_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/teacher_status_register_education_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/cela_back"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="教育快讯"
            android:textColor="#737373"
            android:textSize="16sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/teacher_education_image_01"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教育快讯"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textColor="#7cbfea"
                    android:gravity="right"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#737373"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@drawable/teacher_education_image_02"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#000000"
                >


                <LinearLayout
                    android:id="@+id/teacher_status_register_education_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    >
                    <TextView
                        android:id="@+id/teacher_status_register_education_lible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="前男孩乐队豪宅曝光，带你进入土豪的生活世界"

                        android:layout_marginRight="25dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/dignzi_waiter"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123548"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        />
                </LinearLayout>



                <ImageView
                    android:id="@+id/teacher_status_register_education_userimage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/user_integral_gridview_item_image_41ss"
                    android:layout_below="@+id/teacher_status_register_education_layout"
                    android:layout_alignLeft="@+id/teacher_status_register_education_layout"
                    android:layout_marginTop="6dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="DUFNHNO"
                    android:layout_toRightOf="@+id/teacher_status_register_education_userimage"
                    android:layout_marginLeft="8dp"
                    android:layout_alignTop="@+id/teacher_status_register_education_userimage"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:id="@+id/teacher_status_register_education_horizontal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    ></LinearLayout>

            </HorizontalScrollView>


            <ListView
                android:id="@+id/teacher_status_register_education_listview_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:dividerHeight="6dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:scrollbars="none"
                android:divider="#eeeeee"
                ></ListView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                >

                <View
                    android:layout_width="3dp"
                    android:layout_height="15dp"
                    android:background="#737373"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教育快讯"
                    android:textSize="13sp"
                    android:textColor="#737373"
                    android:layout_marginLeft="8dp"
                    />


            </LinearLayout>


            <ListView
                android:id="@+id/teacher_status_register_education_listview_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="15dp"
                android:scrollbars="none"
                android:layout_marginBottom="30dp"
                android:dividerHeight="0.6dp"
                android:divider="#737373"
                ></ListView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>