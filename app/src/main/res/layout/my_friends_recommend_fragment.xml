<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/my_friends_recommend_fragment_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@drawable/back_image_black" />

        <TextView
            android:id="@+id/my_friends_recommend_fragment_lible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推荐好友"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:padding="6dp"
            android:src="@drawable/brand_fragment_second_image_13" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                >

                <TextView
                    android:id="@+id/my_friends_recommend_fragment_libles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三次推荐任务："
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:gravity="center"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView
                            android:id="@+id/my_friends_recommend_fragment_recommend_usernumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="三次推荐名额：6-15人"
                            android:textSize="13sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        android:padding="3dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="三次推荐名额：6-15人"
                            android:textSize="13sp"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:gravity="center"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成功率：100%"
                            android:textSize="13sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励：100积分/人"
                            android:textSize="13sp"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:gravity="center"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购物率：100%"
                            android:textSize="13sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励：200积分/人"
                            android:textSize="13sp"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:gravity="center"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="二次购物率：60%"
                            android:textSize="13sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励：300积分/人"
                            android:textSize="13sp"
                            />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*成功率指被推荐好友接受推荐邀请，并成功注册百次幂商城。"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*购物率是指成功注册百次幂商城7天内，在百次幂商城完成1次商品交易。二次购物率指在15天内完成2次商品交易。"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#eeeeee"
                    android:layout_marginTop="15dp"
                    />

                <GridView
                    android:id="@+id/my_friends_recommend_fragment_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:layout_marginTop="15dp"
                    android:horizontalSpacing="15dp"
                    android:verticalSpacing="15dp"
                    android:background="@color/white"
                    ></GridView>


                <TextView
                    android:id="@+id/my_friends_recommend_fragment_nextrecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="解锁四次推荐"
                    android:textSize="13sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:background="#ff6001"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*填写推荐信息时请尽量将好友电话、邮箱、微信等信息填写完整，可提升推荐成功率。"
                    android:textSize="13sp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*推荐完成后，请将您的昵称与电话号码后四位告知被推荐好友，并提醒好友在注册时接受推荐邀请。如好友未接受推荐邀请，则推荐失败，且不可返回重选。"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="30dp"
                    />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>