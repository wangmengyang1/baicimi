<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/cela_interal_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/cela_interal_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/cela_back"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="积分兑换"
            android:textColor="#676767"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        >

        <ImageView
            android:id="@+id/cela_imtegral_image"
            android:layout_width="135dp"
            android:layout_height="138dp"
            android:src="@drawable/cela_integral_fragment_image"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/cela_imtegral_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在您购买的产品瓶身上找到积分码，刮开并输入“积分码”后面的所有字符"
            android:textColor="#676767"
            android:gravity="center"
            android:layout_below="@+id/cela_imtegral_image"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

            <View
                android:id="@+id/cela_imtegral_view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/integral_view_shape"
                android:layout_below="@+id/cela_imtegral_textview"
                android:layout_marginTop="20dp"
                />

        <RelativeLayout
            android:id="@+id/cela_imtegral_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cela_imtegral_view"
            android:gravity="center"
            android:layout_marginTop="20dp"

            >


            <EditText
                android:id="@+id/cela_imtegral_edittext"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/integral_edittext_shape"
                android:layout_marginLeft="5dp"
                android:hint="输入字符"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:textColorHint="#cccccc"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/cela_imtegral_button"
            android:layout_width="95dp"
            android:layout_height="28dp"
            android:text="完成"
            android:textStyle="bold"
            android:layout_below="@+id/cela_imtegral_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:background="@drawable/cela_integral_button_shape"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </RelativeLayout>


</LinearLayout>