<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/green_food_grieview_img_goods_shaixuan"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:src="@drawable/green_food_image_15"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/green_food_grieview_tv_shaixuan_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/green_food_grieview_img_goods_shaixuan"
            android:text="湿美白蚕丝面膜贴女没..."
            android:textColor="#7C7C7C"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/green_food_grieview_tv_shaixuan_goods_name"
            android:layout_centerHorizontal="true"
            >


            <RelativeLayout
                android:id="@+id/green_food_grieview_tv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                >


                <ImageView
                    android:id="@+id/green_food_grieview_img_jifen"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/jinbi" />


                <TextView
                    android:id="@+id/green_food_grieview_tv_jifen_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/green_food_grieview_img_jifen"
                    android:background="#878787"
                    android:text="5000"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/green_food_grieview_tv_jifendikou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抵扣"
                    android:background="#878787"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_toRightOf="@id/green_food_grieview_tv_jifen_num"
                    />

                <TextView
                    android:id="@+id/green_food_grieview_tv_mony_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/green_food_grieview_tv_jifendikou"
                    android:background="#878787"
                    android:text="100"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/green_food_grieview_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="#878787"
                    android:layout_toRightOf="@id/green_food_grieview_tv_mony_num"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/green_food_grieview_tv_layout_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/green_food_grieview_tv_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/green_food_grieview_tv_jifenjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分价 ¥"
                    android:textSize="11sp"
                    android:textColor="#7C7C7C"
                    />

                <TextView
                    android:id="@+id/green_food_grieview_tv_jifenjia_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8908.00"
                    android:textSize="11sp"
                    android:textColor="#7C7C7C"
                    android:layout_toRightOf="@id/green_food_grieview_tv_jifenjia"
                    android:layout_alignTop="@id/green_food_grieview_tv_jifenjia"
                    android:layout_marginLeft="5dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/green_food_grieview_tv_layout_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/green_food_grieview_tv_layout_01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/green_food_grieview_tv_shangcheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城价 ¥"
                    android:textSize="11sp"
                    android:textColor="#7C7C7C"
                    />

                <TextView
                    android:id="@+id/green_food_grieview_tv_shangchengjia_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9008.00"
                    android:textSize="11sp"
                    android:textColor="#7C7C7C"
                    android:layout_toRightOf="@id/green_food_grieview_tv_shangcheng"
                    android:layout_alignTop="@id/green_food_grieview_tv_shangcheng"
                    android:layout_marginLeft="5dp"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/green_food_grieview_tv_layout_02"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >

                <TextView
                    android:id="@+id/green_food_grieview_fukuan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="892541人购买"
                    android:textSize="10sp"
                    android:textColor="#989898"
                    android:layout_marginTop="5dp"
                    />


                <!--<TextView
                    android:id="@+id/tv_baoyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包邮"
                    android:layout_toRightOf="@id/fukuan_num"
                    android:layout_alignTop="@id/fukuan_num"
                    android:layout_marginLeft="30dp"
                    android:textSize="10sp"
                    />-->

                <LinearLayout
                    android:id="@+id/green_food_grieview_fragment_shaixuan_gv_item_layout_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/green_food_grieview_fragment_shaixuan_gv_item_shoping_image"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/shoping_package_gral"
                        android:layout_toRightOf="@id/green_food_grieview_fukuan_num"
                        />

                </LinearLayout>


            </LinearLayout>




        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>