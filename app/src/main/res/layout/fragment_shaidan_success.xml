<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/login_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价成功"
            android:textSize="18sp"
            android:textColor="#6A6A6B"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        ></View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/pingjia_sussece"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@mipmap/pingjia_sussece"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:id="@+id/tv_ganxie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感谢您的评价~"
            android:textColor="#6C6C6E"
            android:textSize="18dp"
            android:layout_toRightOf="@id/pingjia_sussece"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_shenhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价内容将在审核通过后展示"
            android:textSize="13dp"
            android:textColor="#A1A2A5"
            android:layout_toRightOf="@id/pingjia_sussece"
            android:layout_below="@id/tv_ganxie"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F4F5F9"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心情不错~继续评价转积分"
            android:textSize="13sp"
            android:textColor="#B1B2B6"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

            <com.baicimi.ui.MyListView
                android:id="@+id/pingjia_list"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="none"
               ></com.baicimi.ui.MyListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#F5F6FA"
                ></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
