<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/every_conversion_adapter_shape"
        android:paddingTop="10dp"

        android:layout_margin="2dp"
        >

        <LinearLayout
            android:id="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_liblelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_lible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="热门话剧演出"
                android:textColor="#010101"
                />


            <TextView
                android:id="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_tag"
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:textSize="12sp"
                android:text="限时积分兑换"
                android:layout_marginLeft="4dp"
                android:background="@drawable/mi_limit_image_35"
                android:gravity="center"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="笔笔有惊喜"
            android:layout_below="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_liblelayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />


        <ImageView
            android:id="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_imageurl"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/mi_limit_image_36"
            android:scaleType="fitXY"
            android:layout_below="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_content"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即查看"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_below="@+id/mi_limit_fragment_earnest_money_suc_list_adapter_imageurl"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            />

    </RelativeLayout>

</LinearLayout>