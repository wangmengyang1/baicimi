<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <ImageView
            android:id="@+id/rreasure_evaluate_fragment_adapter_imageurl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/evaluate_management_image_04"
            />

        <TextView
            android:id="@+id/rreasure_evaluate_fragment_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="穿了一下，特别轻，强力推荐"
            android:textSize="13sp"
            android:layout_below="@+id/rreasure_evaluate_fragment_adapter_imageurl"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:id="@+id/rreasure_evaluate_fragment_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/09/10  17:50"
            android:textSize="13sp"
            android:layout_below="@+id/rreasure_evaluate_fragment_adapter_lible"
            android:layout_marginTop="4dp"
            />

    </RelativeLayout>

</LinearLayout>