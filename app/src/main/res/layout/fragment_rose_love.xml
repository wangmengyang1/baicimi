<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="邮箱提醒设置"
                    android:textColor="#848484"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/tixing"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:checked="false"
                    android:background="@mipmap/xiangxia"
                    android:button="@null" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置接收那些邮件提醒"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_centerVertical="true"
                    android:textSize="11sp"
                    />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>


            <LinearLayout
                android:id="@+id/ll_lixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:background="#FFFFFF"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="邮件提醒设置" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    >

                    <CheckBox
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:background="@drawable/bg_checkbox_star"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接受官方推荐的离线消息提醒邮件"
                        android:layout_marginTop="-3dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    >

                    <CheckBox
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/bg_checkbox_star"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接受官方推送的精彩热点内容邮件"
                        android:gravity="center_vertical"
                        android:layout_marginTop="-3dp"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    >

                    <Button
                        android:id="@+id/btn_yes"
                        android:layout_width="90dp"
                        android:layout_height="55dp"
                        android:background="#CE2538"
                        android:text="确定"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        />

                    <Button
                        android:id="@+id/btn_cansul"
                        android:layout_width="90dp"
                        android:layout_height="55dp"
                        android:background="#D3D3D3"
                        android:text="取消"
                        android:textSize="20sp"
                        android:textColor="#393939"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    ></View>


            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="图片水印设置"
                    android:textColor="#848484"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/shuiyin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:checked="false"
                    android:background="@mipmap/xiangxia"
                    android:button="@null" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42dp"
                    android:text="设置在图片中增加个性水印"
                    android:textSize="11sp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>



            <LinearLayout
                android:id="@+id/ll_setshuiyin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:visibility="gone"
                >


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#464740"
                        android:text="图片水印设置" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:text="设置在图片文章中增加独具个性的水印" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:text="水印内容" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        >

                        <CheckBox
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:button="@null"
                            android:background="@drawable/bg_checkbox_star"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:layout_marginTop="-3dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        >

                        <CheckBox
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:button="@null"
                            android:checked="true"
                            android:background="@drawable/bg_checkbox_star"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="图标"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-3dp"
                            android:layout_marginLeft="6dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        >

                        <CheckBox
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:button="@null"
                            android:checked="true"
                            android:background="@drawable/bg_checkbox_star"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地址"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-3dp"
                            android:layout_marginLeft="6dp"
                            />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水印位置"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="19dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="20dp"
                        >


                        <CheckBox
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:button="@null"
                            android:checked="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_checkbox_star"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="底部居右"
                            android:layout_marginLeft="5dp"
                            android:textSize="13sp"
                            />

                        <CheckBox
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:button="@null"
                            android:checked="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/bg_checkbox_star"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="底部居中"
                            android:layout_marginLeft="5dp"
                            android:textSize="13sp"
                            />

                        <CheckBox
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:button="@null"
                            android:layout_marginLeft="1dp"
                            android:checked="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_checkbox_star"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="图片中心"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        >

                        <Button
                            android:id="@+id/btn_yes1"
                            android:layout_width="70dp"
                            android:layout_height="55dp"
                            android:background="#CE2538"
                            android:text="确定"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF"
                            />

                        <Button
                            android:id="@+id/btn_cansul1"
                            android:layout_width="70dp"
                            android:layout_height="55dp"
                            android:background="#D3D3D3"
                            android:text="取消"
                            android:textSize="20sp"
                            android:textColor="#393939"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/rose_zan"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预览"
                        android:textSize="12sp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" @你的昵称"
                        android:layout_marginRight="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="170dp"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="百次幂.com/yourID"
                        android:layout_marginRight="7dp"
                        android:layout_alignParentRight="true"
                        android:textSize="9sp"
                        android:layout_marginTop="180dp"
                        android:textColor="#FFFFFF"
                        />

                </RelativeLayout>



            </LinearLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="语言设置"
                    android:textColor="#848484"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/languge"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:checked="false"
                    android:background="@mipmap/xiangxia"
                    android:button="@null" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42dp"
                    android:phoneNumber="true"
                    android:textSize="11sp"
                    android:text="中文（简体）" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"></View>


            <LinearLayout
                android:id="@+id/ll_languge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#4F5459"
                    android:text="邮件提醒设置" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="一下信息设置后会在每次登陆时都保留您的选择" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    >

                    <CheckBox
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:background="@drawable/bg_checkbox_star"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中文（简体）"
                        android:layout_marginTop="-3dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    >

                    <CheckBox
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/bg_checkbox_star"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中文（台湾）"
                        android:gravity="center_vertical"
                        android:layout_marginTop="-3dp"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    >

                    <CheckBox
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/bg_checkbox_star"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中文（香港）"
                        android:gravity="center_vertical"
                        android:layout_marginTop="-3dp"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    >

                    <CheckBox
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/bg_checkbox_star"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:gravity="center_vertical"
                        android:layout_marginTop="-3dp"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    >

                    <Button
                        android:id="@+id/btn_yes2"
                        android:layout_width="90dp"
                        android:layout_height="55dp"
                        android:background="#CE2538"
                        android:text="确定"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        />

                    <Button
                        android:id="@+id/btn_cansul2"
                        android:layout_width="90dp"
                        android:layout_height="55dp"
                        android:background="#D3D3D3"
                        android:text="取消"
                        android:textSize="20sp"
                        android:textColor="#393939"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    ></View>


            </LinearLayout>






        </LinearLayout>
    </ScrollView>
</LinearLayout>
