                            android:textColor="#737373"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cover_setting_first_dissmess_dialog_lible_putin_layout_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/cover_setting_first_dissmess_dialog_lible_putin_layout_03"
                        android:layout_marginTop="8dp"
                        >

                        <CheckBox
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:button="@null"
                            android:background="@drawable/checkbox_selector_two"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="宁菲"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:textColor="#737373"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放时间 ：2017/09/02 00:00"
                                android:textSize="13sp"
