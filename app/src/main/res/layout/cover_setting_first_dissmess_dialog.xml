<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/order_form_fragment_clicle_shape"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <TextView
            android:id="@+id/cover_setting_first_dissmess_dialog_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择主题封面"
            android:textSize="13sp"
            android:textColor="#737373"
            />

        <HorizontalScrollView
            android:id="@+id/cover_setting_first_dissmess_dialog_horscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@+id/cover_setting_first_dissmess_dialog_lible"
            android:layout_marginTop="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/cover_setting_first_dissmess_dialog_lible_putin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="当前投放"
                       android:textSize="13sp"
                       android:textColor="#737373"
                       />

                    <LinearLayout
                        android:id="@+id/cover_setting_first_dissmess_dialog_lible_putin_layout_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/cover_setting_first_dissmess_dialog_lible_putin"
                        android:layout_marginTop="8dp"
                        >

                        <CheckBox
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:button="@null"
                            android:background="@drawable/checkbox_selector_two"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="宁菲"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:textColor="#737373"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投放时间 ：2017/09/02 00:00"
                                android:textSize="13sp"
                                android:textColor="#737373"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="结束时间 ：2017/09/10 00:00"
                                android:textSize="13sp"
                                android:textColor="#737373"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/小时"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#737373"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2/次"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#737373"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预览"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:background="#eeeeee"
                            android:textColor="#737373"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cover_setting_first_dissmess_dialog_lible_putin_layout_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
