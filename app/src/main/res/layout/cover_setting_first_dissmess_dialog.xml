                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/小时"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#737373"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2/次"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#737373"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预览"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:background="#eeeeee"
                            android:textColor="#737373"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cover_setting_first_dissmess_dialog_lible_putin_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预售"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#737373"
                        />

                    <LinearLayout
                        android:id="@+id/cover_setting_first_dissmess_dialog_lible_putin_layout_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/cover_setting_first_dissmess_dialog_lible_putin_02"
