<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/register_back"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机快速注册"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_guanggao"
        android:layout_below="@id/login_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_title"/>


    <RelativeLayout
        android:id="@+id/phone_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:layout_below="@id/login_guanggao"
        >

        <TextView
            android:id="@+id/zhanghao"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="#424242"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="请输入手机号"
            android:layout_marginLeft="10dp"
            android:textColor="#BDBDBD"
            android:inputType="phone"
            android:layout_toRightOf="@id/zhanghao"
            android:padding="8dp"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/xieyi"
        android:layout_below="@id/phone_re"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/xieyi_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:checked="true"
            android:button="@null"
            android:layout_centerVertical="true"
            android:background="@drawable/gouwuche_list_chexbok"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="#BDBDBD"
            android:layout_toRightOf="@id/xieyi_checkbox"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册协议"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="#424242"
            android:layout_toRightOf="@id/agree"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_below="@id/xieyi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="#EEEEEE"
        android:text="下一步"
        android:textColor="#D5D5D5"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_next"
        >

        <TextView
            android:id="@+id/wenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遇到问题？"
            android:textSize="15sp"
            android:layout_marginLeft="40dp"
            android:textColor="#B4B4B4"
            />
        <TextView
            android:id="@+id/keyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您可以"
            android:textSize="15sp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/wenti"
            android:textColor="#B4B4B4"
            />

        <TextView
            android:id="@+id/kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="15sp"
            android:layout_toRightOf="@id/keyi"
            android:textColor="#818181"
            />

        <View
            android:layout_toRightOf="@id/keyi"
            android:layout_below="@id/kefu"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            ></View>

    </RelativeLayout>

</RelativeLayout>
