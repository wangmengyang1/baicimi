<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:id="@+id/mi_limit_fragment_earnest_code_adapter_layoutbackground"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="center"
        android:background="#c4c4c4"
        >




        <ImageView
            android:id="@+id/mi_limit_fragment_earnest_code_adapter_imageurl"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mi_limit_image_14"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/mi_limit_fragment_earnest_code_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="兑换礼品"
            android:layout_below="@+id/mi_limit_fragment_earnest_code_adapter_imageurl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#010101"
            />



        <TextView
            android:id="@+id/mi_limit_fragment_earnest_code_adapter_content"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:textSize="13sp"
            android:text="在百次幂积分商城上兑换礼品，礼品包含大牌化妆品，使用日用品，进口母婴产品等价值百元的高品质产品。"
            android:layout_below="@+id/mi_limit_fragment_earnest_code_adapter_lible"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#010101"
            android:maxLines="4"
            android:ellipsize="end"
            />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_below="@+id/mi_limit_fragment_earnest_code_adapter_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            >


            <LinearLayout
                android:id="@+id/mi_limit_fragment_earnest_code_adapter_buttonlayoutfirst"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/mi_limit_fragment_earnest_code_adapter_buttonfirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现在兑换"
                    android:textSize="13sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:textColor="#010101"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mi_limit_fragment_earnest_code_adapter_buttonlayoutsecond"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/mi_limit_fragment_earnest_code_adapter_buttonsecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现在兑换"
                    android:textSize="13sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:textColor="#010101"
                     />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>