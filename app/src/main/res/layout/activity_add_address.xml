<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/register_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加收货地址"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/chuangkou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/cehua" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEEE"></View>

        <ImageView
            android:id="@+id/login_guanggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_title"
            android:layout_marginTop="-30dp"
            android:src="@mipmap/login_title" />

        <View
            android:id="@+id/vv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="-30dp"
            android:background="#EEEEEE"></View>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

        <ImageView
            android:id="@+id/img_receve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recive_man"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />

            <TextView
                android:id="@+id/tv_recive_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textSize="15sp"
                android:textColor="#7B7E80"
                android:layout_toRightOf="@id/img_receve"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@null"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="#7B7E80"
                android:layout_toRightOf="@id/tv_recive_man"
                android:layout_marginLeft="10dp"

                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/img_lianxi_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/lianxi_phone"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_lianxi_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textSize="15sp"
                android:textColor="#7B7E80"
                android:layout_toRightOf="@id/img_lianxi_phone"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@null"
                android:textSize="15sp"
                android:textColor="#7B7E80"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_lianxi_phone"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"
            ></View>

        <RelativeLayout
            android:id="@+id/info_place"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/img_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/address"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_adddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textSize="15sp"
                android:textColor="#7B7E80"
                android:layout_toRightOf="@id/img_address"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_left"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/info_pla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东省 广州市 白云区"
                android:textSize="15sp"
                android:textColor="#7B7E80"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"
            ></View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="15sp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="top"
            android:hint="民营科技园火炬大厦1501"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#D5D5D5"
            ></View>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:text="保存地址"
            android:textColor="#F84444"
            />

    </LinearLayout>


</RelativeLayout>
