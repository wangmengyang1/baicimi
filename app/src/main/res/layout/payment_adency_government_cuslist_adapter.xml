<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <TextView
            android:id="@+id/payment_adency_government_cuslist_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="2017.08.29"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/payment_adency_government_cuslist_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="提现"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/payment_adency_government_cuslist_adapter_date"
            android:layout_marginLeft="10dp"
            />


        <ImageView
            android:id="@+id/payment_adency_government_cuslist_adapter_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_image_10"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/payment_adency_government_cuslist_adapter_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="10000积分"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/payment_adency_government_cuslist_adapter_tag"
            />


        <TextView
            android:id="@+id/payment_adency_government_cuslist_adapter_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="交易成功"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/payment_adency_government_cuslist_adapter_tag"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/payment_adency_government_cuslist_adapter_particulars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
            />

    </RelativeLayout>

</LinearLayout>