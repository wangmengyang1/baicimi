<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F5">

    <android.support.v4.view.ViewPager
        android:id="@+id/check_list"
        android:layout_width="match_parent"
        android:layout_below="@id/re1"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/re_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        >

        <TextView
            android:id="@+id/gouwuche_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥100.00元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            />

        <CheckBox
            android:id="@+id/che1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/gouwuche_use_jifen_chexbok"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/gouwuche_all_price"
            android:checked="true"
            android:layout_marginTop="7dp"

            />

        <TextView
            android:id="@+id/jifendikou1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000积分抵扣10元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/che1"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/che1"
            />

        <TextView
            android:id="@+id/dikouhou_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥90.00元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/jifendikou1"
            android:layout_marginLeft="35dp"
            android:layout_alignTop="@+id/che1"
            />

        <CheckBox
            android:id="@+id/che2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/gouwuche_use_jifen_chexbok"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/che1"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/jifendikou2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500积分抵扣15元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/che2"
            android:layout_alignTop="@id/che2"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/dikouhou_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥85.00元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/jifendikou2"
            android:layout_alignTop="@id/che2"
            android:layout_marginLeft="35dp"
            />


        <CheckBox
            android:id="@+id/che3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/gouwuche_use_jifen_chexbok"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/che2"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/jifendikou3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000积分抵扣30元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/che3"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/che3"
            />

        <TextView
            android:id="@+id/dikouhou_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥70.00元"
            android:textSize="14sp"
            android:textColor="#5B5B5B"
            android:layout_toRightOf="@id/jifendikou3"
            android:layout_marginLeft="35dp"
            android:layout_alignTop="@+id/che3"
            />

        <TextView
            android:id="@+id/tv_fenqi"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="分期"
            android:textSize="12sp"
            android:textColor="#5B5B5B"
            android:layout_marginTop="3dp"
            android:layout_below="@id/che3"
            android:layout_marginLeft="15dp"
            />

        <CheckBox
            android:id="@+id/btn_three"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="  ¥2469x3期"
            android:textSize="12sp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/fenqi_chexbok"
            android:textColor="#5B5B5B"
            android:layout_below="@id/che3"
            android:layout_toRightOf="@id/tv_fenqi"
            android:layout_marginTop="6dp"
            />

        <CheckBox
            android:id="@+id/btn_six"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:button="@null"
            android:background="@drawable/fenqi_chexbok"
            android:text="  ¥2469x3期"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="#5B5B5B"
            android:layout_below="@id/che3"
            android:layout_toRightOf="@id/btn_three"
            android:layout_marginTop="6dp"
            />

        <CheckBox
            android:id="@+id/btn_shier"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:button="@null"
            android:background="@drawable/fenqi_chexbok"
            android:text="  ¥2469x3期"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textColor="#5B5B5B"
            android:layout_below="@id/che3"
            android:layout_toRightOf="@id/btn_six"
            android:layout_marginTop="6dp"
            />

        <RelativeLayout
            android:id="@+id/btn_gouwuche_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/btn_gouwuche_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerInParent="true"
                android:textColor="@color/red"
                />

            <ImageView
                android:id="@+id/btn_gouwuche"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/shoping_package_red"
                />


        </RelativeLayout>



        <Button
            android:id="@+id/btn_buynow"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@mipmap/img_buynow"
            android:text="立即购买"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/btn_gouwuche_layout"
            android:layout_marginRight="15dp"
            />



        <LinearLayout
            android:id="@+id/fragment_details_layout_tagnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/gouwuche_all_price"
            android:layout_marginRight="40dp"
            android:padding="2dp"
            >

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/tag_image_gral"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/fragment_details_textview_tagnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textSize="12sp"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="-2dp"
                />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_above="@id/re_buy"
        ></View>

</RelativeLayout>
