<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <ImageView
            android:id="@+id/setting_significance_home_circle_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_image_black"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/setting_significance_home_circle_lible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账户安全"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/brand_fragment_second_image_13"
            android:padding="6dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#e1e1e1"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/setting_user_message_basic_date_image_01"
            android:scaleType="fitXY"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eeeeee"
            />

        <LinearLayout
            android:id="@+id/setting_significance_home_circle_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#535353"
                    android:text="修改登录密码"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="*建议您定期更新密码以保护账户安全"
                    />

            </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/user_header_img"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/right_img"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            />
        <LinearLayout
            android:id="@+id/setting_significance_home_circle_phonepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#535353"
                    android:text="手机认证"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="*建议您定期更新密码以保护账户安全"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#ff0000"
                android:textSize="14dp"
                android:text="马上开启"
                android:layout_marginRight="15dp"
                android:gravity="center"
                />



            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/right_img"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            />
        <LinearLayout
            android:id="@+id/setting_significance_home_circle_paypassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#535353"
                android:text="修改支付密码"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#535353"
                android:textSize="14dp"
                android:text="你猜"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:visibility="invisible"
                />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/right_img"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eeeeee"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#535353"
                android:text="实名认证"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#535353"
                android:textSize="14dp"
                android:text="未认证"
                android:layout_marginRight="15dp"
                android:gravity="center"
                />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/right_img"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eeeeee"
        />



</LinearLayout>