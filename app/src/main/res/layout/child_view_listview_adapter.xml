<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
        >

        <TextView
            android:id="@+id/child_view_listview_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.01.10"
            android:textSize="13sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_img"
            android:layout_alignParentRight="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/child_view_listview_adapter_lible"
            android:layout_marginTop="6dp"
            >

            <TextView
                android:id="@+id/child_view_listview_adapter_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="关联好友在百次幂商城一次性购物满1000元均有好礼相赠"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/child_view_listview_adapter_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3000.00"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>