<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <ImageView
            android:id="@+id/mi_chat_invite_friends_adapter_imageurl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mi_people_chat_fragment_image_30"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/mi_chat_invite_friends_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="angela"
            android:layout_toRightOf="@+id/mi_chat_invite_friends_adapter_imageurl"
            android:layout_marginLeft="8dp"
            android:textSize="13sp"
            android:textColor="#737373"
            android:layout_alignBottom="@+id/mi_chat_invite_friends_adapter_imageurl"
            android:layout_marginBottom="6dp"
            />




        <View
            android:id="@+id/mi_chat_invite_friends_adapter_view"
            android:layout_width="200dp"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            android:layout_below="@+id/mi_chat_invite_friends_adapter_lible"
            android:layout_alignLeft="@+id/mi_chat_invite_friends_adapter_lible"
            android:layout_marginTop="2dp"
            />


        <TextView
            android:id="@+id/mi_chat_invite_friends_adapter_invite"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="#aaaaaa"
            android:text="邀请"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/mi_chat_invite_friends_adapter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请失败"
            android:layout_marginLeft="8dp"
            android:textSize="13sp"
            android:textColor="#ff0000"
            android:layout_marginBottom="6dp"
            android:layout_toLeftOf="@+id/mi_chat_invite_friends_adapter_invite"
            android:layout_alignTop="@+id/mi_chat_invite_friends_adapter_lible"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>
</LinearLayout>