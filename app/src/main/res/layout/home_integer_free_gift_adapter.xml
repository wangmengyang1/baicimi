<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/every_conversion_adapter_shape"
        android:padding="1dp"
        >

        <TextView
            android:id="@+id/home_integer_free_gift_adapter_layout_lible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="V2专区"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="#eeeeee"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/home_integer_free_gift_adapter_layout_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/home_integer_free_gift_adapter_layout_lible"
            android:layout_marginTop="1dp"

            >

            <ImageView
                android:id="@+id/home_integer_free_gift_adapter_imageurl"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/home_integer_conversion_01"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/home_integer_free_gift_adapter_lible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="香奈儿NO5香水"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/home_integer_free_gift_adapter_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="市场价：¥216.00"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"

                    />
                <TextView
                    android:id="@+id/home_integer_free_gift_adapter_integer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="积分：6556"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/home_integer_free_gift_adapter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="数量：16556"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/home_integer_free_gift_adapter_view"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#737373"
            android:layout_below="@+id/home_integer_free_gift_adapter_layout_01"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_integer_free_gift_adapter_view"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/home_integer_free_gift_adapter_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="兑换详情"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#737373"
                />
            <TextView
                android:id="@+id/home_integer_free_gift_adapter_rule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="兑换规则"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#737373"
                />

            <TextView
                android:id="@+id/home_integer_free_gift_adapter_immediately"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="立即兑换"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>