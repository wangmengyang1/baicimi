<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/every_conversion_adapter_shape"
        android:padding="6dp"
        >

        <TextView
            android:id="@+id/miwallet_record_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="2017.03.06"
            />

        <ImageView
            android:id="@+id/miwallet_record_adapter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_img"
            android:layout_alignParentRight="true"
            />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/miwallet_record_adapter_date"
           android:layout_marginTop="4dp"
           >

           <TextView
               android:id="@+id/miwallet_record_adapter_content"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="13965468432 广东移动30元手机话费充值，自动充值"
               android:textSize="13sp"
               android:maxLines="1"
               android:ellipsize="end"
               android:layout_marginRight="20dp"
               />

           <TextView
               android:id="@+id/miwallet_record_adapter_state"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="政府采购"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:layout_marginRight="10dp"
               />


           <TextView
               android:id="@+id/miwallet_record_adapter_money"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+100.00"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:layout_marginRight="10dp"
               />

       </LinearLayout>

    </RelativeLayout>

</LinearLayout>