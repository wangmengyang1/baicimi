<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="350dp">


    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_height="290dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@drawable/ssdk_oks_classic_wechat"
                android:drawablePadding="5dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_wxp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@drawable/ssdk_oks_classic_wechatmoments"
                android:drawablePadding="5dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_wb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@drawable/ssdk_oks_classic_sinaweibo"
                android:drawablePadding="5dp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@drawable/ssdk_oks_classic_qq"
                android:drawablePadding="5dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_qqz"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@drawable/ssdk_oks_classic_qzone"
                android:drawablePadding="5dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="复制链接"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@mipmap/fuzhilianjie"
                android:drawablePadding="5dp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawableTop="@mipmap/gengduo_fenxiang"
                android:drawablePadding="5dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawablePadding="5dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#B7B8BA"
                android:drawablePadding="5dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_cansul_share"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D02020"
        android:layout_below="@id/ll_share"
        android:text="取消"
        android:textSize="17sp"
        android:textColor="#ffffff"
        />
</RelativeLayout>
