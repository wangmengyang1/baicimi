                            android:id="@+id/goods_huase"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:button="@null"
                            android:background="@drawable/color_chexbok4"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
