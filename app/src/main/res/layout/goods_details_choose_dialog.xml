                            android:layout_height="28dp"
                            android:button="@null"
                            android:background="@drawable/color_chexbok5"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            />

                        <CheckBox
                            android:id="@+id/goods_danyellow"
