<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.youth.banner.Banner
                android:id="@+id/tryout_applyfor_fragment_banner"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                app:title_height="0dp"
                ></com.youth.banner.Banner>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:src="@drawable/tyrout_applyfor_fragment_image_02"
                android:scaleType="fitXY"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#fafafa"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cf1f2e"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >
                
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#cf1f2e"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    >

                    <ImageView
                        android:id="@+id/tryout_applyfor_fragment_user_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_image_weight"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/tryout_applyfor_fragment_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My trial"
                        android:textSize="18sp"
                        android:layout_below="@+id/tryout_applyfor_fragment_user_image"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        />
                    <TextView
                        android:id="@+id/tryout_applyfor_fragment_user_lible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的试用"
                        android:textSize="16sp"
                        android:layout_below="@+id/tryout_applyfor_fragment_user_name"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/tryout_applyfor_fragment_image"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/tyrout_applyfor_fragment_image_04"
                        />

                    <TextView
                        android:id="@+id/tryout_applyfor_fragment_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在申请的试用"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/tryout_applyfor_fragment_image"
                        />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tyrout_applyfor_fragment_image_08"
                        android:layout_below="@+id/tryout_applyfor_fragment_image"
                        android:layout_alignLeft="@+id/tryout_applyfor_fragment_image"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/tryout_applyfor_fragment_lible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正品 韩国品驰 畅销补水修复祛痘印面膜"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_toRightOf="@+id/tryout_applyfor_fragment_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/tryout_applyfor_fragment_lible"
                        android:layout_alignLeft="@+id/tryout_applyfor_fragment_lible"
                        android:layout_marginTop="6dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="K***x"
                                android:textSize="11sp"
                                android:maxLines="1"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="申请试用"
                                android:textSize="11sp"
                                android:maxLines="1"
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="5分钟前"
                                android:textSize="11sp"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="K***x"
                                android:textSize="11sp"
                                android:maxLines="1"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="申请试用"
                                android:textSize="11sp"
                                android:maxLines="1"
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="5分钟前"
                                android:textSize="11sp"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="K***x"
                                android:textSize="11sp"
                                android:maxLines="1"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="申请试用"
                                android:textSize="11sp"
                                android:maxLines="1"
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="5分钟前"
                                android:textSize="11sp"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>
                
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cf1f2e"
                />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#fafafa"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热卖试用"
                    android:textColor="#737373"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:textColor="#737373"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:text="Hot trial"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/tryout_applyfor_fragment_horizontal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    ></LinearLayout>

            </HorizontalScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#fafafa"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐试用"
                    android:textColor="#737373"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:textColor="#737373"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:text="Recommended trial"
                    android:layout_marginLeft="8dp"
                    />



            </LinearLayout>

            <GridView
                android:id="@+id/tryout_applyfor_fragment_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:background="#fafafa"
                android:numColumns="2"
                android:paddingTop="1dp"
                ></GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#fafafa"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="了解更多"
                    android:textColor="#969696"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_page_image_black"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#fafafa"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>