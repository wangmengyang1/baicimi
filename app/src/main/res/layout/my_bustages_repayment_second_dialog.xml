<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/order_form_fragment_clicle_shape"
        >


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#eeeeee"
            android:padding="4dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:text="还款"
                android:textSize="13sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/my_bustages_repayment_second_dialog_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:padding="4dp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <LinearLayout
                android:id="@+id/my_bustages_repayment_second__dialog_content"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="使用幂钱包支付："
                        android:textColor="#737373"
                        />

                    <CheckBox
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_selector_two"
                        android:layout_marginLeft="10dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/hudie_img"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="幂支付"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="其他支付方式："
                        android:textColor="#737373"

                        />

                    <CheckBox
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_selector_two"
                        android:layout_marginLeft="10dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银联"
                        android:layout_marginLeft="8dp"
                        />

                    <CheckBox
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_selector_two"
                        android:layout_marginLeft="10dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:layout_marginLeft="8dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="其他支付方式："
                        android:textColor="#737373"
                        android:visibility="invisible"
                        />

                    <CheckBox
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_selector_two"
                        android:layout_marginLeft="24dp"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝"
                        android:layout_marginLeft="8dp"
                        />

                    <CheckBox
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_selector_two"
                        android:layout_marginLeft="10dp"
                        android:visibility="invisible"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:layout_marginLeft="8dp"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="百次幂支付密码："
                        android:textColor="#737373"
                        />

                    <EditText
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                        android:textSize="13sp"
                        android:padding="4dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="忘记密码？"
                        android:layout_marginLeft="8dp"
                        android:textColor="#35a5cf"
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/my_bustages_repayment_second__dialog_content"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/my_bustages_repayment_second_dialog_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认付款"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:background="#ff0000"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>