<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/register_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机快速注册"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_guanggao"
        android:layout_below="@id/login_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_title"/>

    <RelativeLayout
        android:id="@+id/yanzheng"
        android:layout_below="@id/login_guanggao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/inport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#414141"
            android:text="请输入"
            android:layout_marginLeft="40dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#414141"
            android:layout_toRightOf="@id/inport"
            android:text="13902217452"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/shoudao_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#414141"
            android:layout_toRightOf="@id/phone_num"
            android:text="收到的短信验证码"
            android:textSize="15sp"
            />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/phone_re"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_below="@id/yanzheng"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_password_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#fff"
            android:layout_gravity="center_vertical"
            android:hint="请输入验证码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#B3B3B3"
            android:layout_marginRight="5dp"
            android:inputType="phone"
            android:padding="8dp"
            android:textSize="18sp" />

           <com.baicimi.ui.TimeButton
               android:id="@+id/button1"
               android:layout_width="0dp"
               android:layout_weight="2.5"
               android:layout_height="match_parent"
               android:background="#EEEEEE"
               android:text=""
               android:textSize="14sp"
               android:textColor="#A2A2A2"
               />




    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_below="@id/phone_re"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="#EEEEEE"
        android:text="下一步"
        android:textColor="#D5D5D5"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_next"
        >

        <TextView
            android:id="@+id/wenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遇到问题？"
            android:textSize="15sp"
            android:layout_marginLeft="40dp"
            android:textColor="#B4B4B4"
            />
        <TextView
            android:id="@+id/keyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您可以"
            android:textSize="15sp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/wenti"
            android:textColor="#B4B4B4"
            />

        <TextView
            android:id="@+id/kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="15sp"
            android:layout_toRightOf="@id/keyi"
            android:textColor="#818181"
            />

        <View
            android:layout_toRightOf="@id/keyi"
            android:layout_below="@id/kefu"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            ></View>

    </RelativeLayout>


</RelativeLayout>
