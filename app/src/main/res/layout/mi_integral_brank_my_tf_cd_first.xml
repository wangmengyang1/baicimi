<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        >

        <ImageView
            android:id="@+id/mi_integral_brank_my_tf_cd_first_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_image_black"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/mi_integral_brank_my_tf_cd_first_lible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="活期储蓄"
            android:textColor="#737373"
            android:gravity="center"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/brand_fragment_second_image_13"
            android:padding="6dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="18dp"
        >

        <ImageView
            android:id="@+id/mi_integral_brank_my_tf_cd_first_scanning"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/brand_fragment_second_image_12"
            android:layout_marginLeft="15dp"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:background="@drawable/brand_fragment_second_edittext_layer_list"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint=""
            android:textSize="12sp"
            android:paddingLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#e1e1e1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="活期存储"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="存储形式"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#dcdcdc"
                android:textColor="#737373"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="活期"
                android:gravity="center"
                android:textSize="13sp"
                />

        </LinearLayout>
        <View
            android:layout_width="0.6dp"
            android:layout_height="100dp"
            android:background="#737373"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="存储金额"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#dcdcdc"
                android:textColor="#737373"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="5000"
                android:gravity="center"
                android:textSize="13sp"
                />

        </LinearLayout>
        <View
            android:layout_width="0.6dp"
            android:layout_height="100dp"
            android:background="#737373"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="存入时间"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#dcdcdc"
                android:textColor="#737373"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="2017.01.20"
                android:gravity="center"
                android:textSize="13sp"
                />

        </LinearLayout>
        <View
            android:layout_width="0.6dp"
            android:layout_height="100dp"
            android:background="#737373"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="操作"
                android:gravity="center"
                android:textSize="13sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="#dcdcdc"
                android:textColor="#737373"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/mi_integral_brank_my_tf_cd_first_cdfirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看详情"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提取积分"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
                    android:layout_marginTop="4dp"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>




</LinearLayout>