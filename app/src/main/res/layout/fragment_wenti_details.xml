<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/register_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题详情"
            android:textSize="16sp"
            android:textColor="#5C5C5C"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#EFEFF3"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <TextView
            android:id="@+id/fragment_wenti_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q"

            android:background="#dc325e"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />

        <TextView
            android:id="@+id/fragment_wenti_details_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货时间"
            android:layout_centerVertical="true"
            android:textColor="#3C3C3C"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/fragment_wenti_details_tv"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
        
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        ></View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/fragment_wenti_details_textview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="幂商城全程百次幂商城，是一家以化妆品为主的020类型购物网站。"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffff"
            android:textColor="#8C8C8C"
            />
        <ImageView
            android:id="@+id/fragment_wenti_details_textview_image_integer"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:src="@drawable/image_integer_check"
            android:layout_below="@+id/fragment_wenti_details_textview_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#EFEFF3"
        ></View>

    <RelativeLayout
        android:id="@+id/fragment_wenti_details_frequently_question"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:textSize="14sp"
            android:textColor="#5C5C5C"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        ></View>

    <RelativeLayout
        android:id="@+id/fragment_wenti_details_online_server"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_online_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线客服"
            android:textSize="14sp"
            android:textColor="#5C5C5C"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(推荐)"
            android:textColor="#D1315B"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_online_kefu"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        ></View>

    <RelativeLayout
        android:id="@+id/fragment_wenti_details_leavemessage"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言反馈"
            android:textSize="14sp"
            android:textColor="#5C5C5C"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        ></View>
</LinearLayout>
