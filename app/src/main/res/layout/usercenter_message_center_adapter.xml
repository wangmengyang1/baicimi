<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/usercenter_message_center_adapter_ischecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_convertion_05"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:id="@+id/usercenter_message_center_adapter_userimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/image_convertion_06"
            android:layout_toRightOf="@+id/usercenter_message_center_adapter_ischecked"
            android:layout_marginLeft="8dp"
            />


        <LinearLayout
            android:id="@+id/usercenter_message_center_adapter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/usercenter_message_center_adapter_userimage"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/usercenter_message_center_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统"
                android:textSize="13sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/usercenter_message_center_adapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="8月18日"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_img"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/usercenter_message_center_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="推荐好友逾期未注册通知------"
            android:layout_below="@+id/usercenter_message_center_adapter_layout"
            android:layout_alignLeft="@+id/usercenter_message_center_adapter_layout"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:id="@+id/usercenter_message_center_adapter_conent_ischeckfalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲爱的，我已经开通亲密付了，你也开通吧，以后可以一起购物，享受更多优惠啦，赶紧一起去选购更多商品吧。"
            android:layout_below="@+id/usercenter_message_center_adapter_lible"
            android:layout_alignLeft="@+id/usercenter_message_center_adapter_lible"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/usercenter_message_center_adapter_conent_ischecktrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲爱的，我已经开通亲密付了，你也开通吧，以后可以一起购物，享受更多优惠啦，赶紧一起去选购更多商品吧。"
            android:layout_below="@+id/usercenter_message_center_adapter_lible"
            android:layout_alignLeft="@+id/usercenter_message_center_adapter_lible"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            />



    </RelativeLayout>

</LinearLayout>