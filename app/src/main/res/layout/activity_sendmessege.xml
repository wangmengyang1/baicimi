<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="200dp"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3E3E40"
        android:text="我们将发送验证码短信至："
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/send_messege_to_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3E3E40"
        android:layout_below="@id/send"
        android:text="13569874254"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F6F7F9"
        android:layout_below="@id/send_messege_to_phone"
        android:layout_marginTop="30dp"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/send_message_quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#292929"
            android:background="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/send_message_queren"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"
            android:background="#F23030"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
