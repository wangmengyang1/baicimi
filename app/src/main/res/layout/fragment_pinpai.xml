<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

  <View
      android:layout_width="match_parent"
      android:layout_height="155dp"
      android:background="@mipmap/pinpai_title"
      ></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="销量"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="折扣"
            android:gravity="center"
            android:drawableRight="@mipmap/shangxiaanniu"
            android:drawablePadding="-40dp"
            android:textSize="17sp"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格"
            android:drawableRight="@mipmap/shangxiaanniu"
            android:drawablePadding="-40dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:drawableRight="@mipmap/pinpaianniu"
            android:drawablePadding="-40dp"
            android:layout_marginLeft="-25dp"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="适用肤质"
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/img_shaixuan"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:gravity="center"
            android:layout_marginRight="13dp"
            android:drawableRight="@mipmap/shaixuananniu"
            android:drawablePadding="-40dp"
            android:textSize="17sp"
            android:textColor="#545454"
            android:layout_gravity="center_vertical"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_marginRight="-30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/liebiao_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/shaixuan_goods_chexbok"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#E8E8E8"
        ></View>


    <FrameLayout
        android:id="@+id/shaixuan_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>


</LinearLayout>
