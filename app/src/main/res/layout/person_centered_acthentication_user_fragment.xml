<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:id="@+id/teacher_status_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#d52846"
        >

        <ImageView
            android:id="@+id/back_acthentication_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_wirth_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号认证"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />


    </RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="带*的为必填"
               android:textSize="14sp"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="30dp"
               android:textColor="#5d5d5d"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="30dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*认证类型 : "
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="个人认证"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_marginLeft="8dp"
                   />

               <TextView
                   android:id="@+id/person_centered_acthentication_user_fragment_textview_change"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="(更换认证类型)"
                   android:textColor="@color/red"
                   android:textSize="12sp"
                   android:layout_marginLeft="8dp"
                   />

           </LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="有营业执照的各类企业，公司等企业官方账号均可申请企业认证"
               android:textSize="11sp"
               android:layout_marginLeft="40dp"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center_vertical"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="50dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*职业类别"
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />


                   <Spinner
                       android:id="@+id/person_cnetered_spinner"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       ></Spinner>


           </LinearLayout>
           

           <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@drawable/person_centered_acthentication_user_view_shape"
               android:layout_marginTop="8dp"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="请完善认证说明，认证成功，将出现在你的提示信息中"
               android:gravity="center"
               android:layout_marginTop="5dp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:text="昵称：嘎嘎嘎嘎嘎嘎个"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="45dp"
               android:textColor="@color/black"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="5dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*工作单位全称 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center_vertical"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*公民性质"
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />


               <Spinner
                   android:id="@+id/person_centered_spinner_02"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   ></Spinner>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center_vertical"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*账号用途"
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />


               <Spinner
                   android:id="@+id/person_centered_spinner_03"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   ></Spinner>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*第三方链接地址 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*认证说明 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*联系人姓名 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*联系人职位 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*联系手机 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*电子邮箱 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*身份证照 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="浏览..."
                   android:textSize="14sp"
                   android:paddingTop="4dp"
                   android:paddingBottom="4dp"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:background="@drawable/person_cnetered_acthentication_user_button_shape"
                   android:layout_marginLeft="15dp"
                   />

           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="身份证照仅供认证使用，不会对外公开，请放心填写"
               android:textSize="11sp"
               android:textColor="@color/red"
               android:gravity="center"
               android:layout_marginTop="4dp"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*岗位证明 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="浏览..."
                   android:textSize="14sp"
                   android:paddingTop="4dp"
                   android:paddingBottom="4dp"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:background="@drawable/person_cnetered_acthentication_user_button_shape"
                   android:layout_marginLeft="15dp"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="*其他材料 ："
                   android:textSize="14sp"
                   android:textColor="#5d5d5d"
                   />

               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:background="@drawable/person_centered_acthentication_user_fragment_spinnert_shape"
                   android:textColor="#5d5d5d"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="浏览..."
                   android:textSize="14sp"
                   android:paddingTop="4dp"
                   android:paddingBottom="4dp"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:background="@drawable/person_cnetered_acthentication_user_button_shape"
                   android:layout_marginLeft="15dp"
                   />

           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="上传认证"
               android:background="@drawable/intimacy_payment_home_page_button_shape"
               android:textColor="@color/white"
               android:gravity="center"
               android:paddingTop="8dp"
               android:paddingBottom="8dp"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               android:layout_marginBottom="8dp"
               />

       </LinearLayout>

   </ScrollView>



</LinearLayout>