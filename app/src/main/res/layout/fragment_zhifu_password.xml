<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/register_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="重设支付密码"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/chuangkou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/cehua" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEEE"></View>

        <ImageView
            android:id="@+id/login_guanggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_title"
            android:layout_marginTop="-30dp"
            android:src="@mipmap/login_title" />

        <View
            android:id="@+id/vv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="-30dp"
            android:background="#EEEEEE"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#F5F5F5"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/you_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你正在为"
                android:textSize="15sp"
                android:textColor="#5A5A5B"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/zhifu_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1888***8888"
                android:textSize="15sp"
                android:layout_toRightOf="@id/you_now"
                android:textColor="#5A5A5B"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/chongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置支付密码"
                android:textSize="15sp"
                android:layout_toRightOf="@id/zhifu_phone"
                android:textColor="#5A5A5B"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/me_jide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我记得原支付密码"
                android:textSize="15sp"
                android:textColor="#5A5A5B"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_left"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"
            ></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/me_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我忘记支付密码了"
                android:textSize="15sp"
                android:textColor="#5A5A5B"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_left"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D5D5D5"
            ></View>
    </LinearLayout>


</RelativeLayout>
