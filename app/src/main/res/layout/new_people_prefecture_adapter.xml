<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/every_conversion_adapter_layout_01"
        android:layout_marginTop="1dp"
        android:background="@drawable/every_conversion_adapter_shape"
        android:padding="0.6dp"
        >

        <ImageView
            android:id="@+id/new_people_prefecture_adapter_imageurl"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="150dp"
            android:src="@drawable/home_integer_conversion_01"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/new_people_prefecture_adapter_lible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="香奈儿NO5香水"

                />


            <TextView
                android:id="@+id/new_people_prefecture_adapter_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="数量：16556"
                android:textColor="#ff0000"
                android:layout_marginTop="8dp"
                />



            <TextView
                android:id="@+id/new_people_prefecture_adapter_integer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="积分：6556"
                android:textColor="#ff0000"
                android:layout_marginTop="8dp"
                />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"

                >

                <TextView
                    android:id="@+id/new_people_prefecture_adapter_rule"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="兑换详情"
                    android:background="@drawable/every_conversion_adapter_shape"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"

                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/new_people_prefecture_adapter_conversion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="立即兑换"
                    android:background="@drawable/every_conversion_adapter_shape"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>