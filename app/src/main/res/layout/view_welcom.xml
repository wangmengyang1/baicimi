<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_cotent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="70dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.baicimi.ui.NavImgLayout
            android:id="@+id/welcom_navlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:checkedimg="@mipmap/img_main_select_pop_d_pressed"
            app:uncheckedimg="@mipmap/img_main_select_pop_d_default" />

        <Button
            android:id="@+id/btn_welcom"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_welcom"
            android:text="立即体验"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>