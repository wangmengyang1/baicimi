<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/register_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认个人订单"
                android:textColor="#696969"
                android:textSize="18sp" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/fragment_person_dingdan_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp">

                    <ImageView
                        android:id="@+id/img_dingdan"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/changxiaore" />

                    <TextView
                        android:id="@+id/tv_dingdan_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/img_dingdan"
                        android:text="七月菊洗发水"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_dingdan_yanse_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dingdan_message"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_dingdan"
                        android:text="颜色分类:韩国5片装"
                        android:textColor="#AEAEAE"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dingdan_sand_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dingdan_yanse_num"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/img_dingdan"
                        android:text="发货时间:卖家承诺24小时内发货"
                        android:textColor="#EC4C68"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dingdan_all_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dingdan_sand_time"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/img_dingdan"
                        android:text="¥130.80"
                        android:textColor="#EC4C68"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        android:text="x1"
                        android:textColor="#6E6E73"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/recieve_goods_address"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/img_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:src="@mipmap/dingdan_address" />

                    <TextView
                        android:id="@+id/tv_dingdan_shouhuoren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@id/img_address"
                        android:text="收货人:张三"
                        android:textColor="#484C4F"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tv_dingdan_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dingdan_shouhuoren"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/img_address"
                        android:text="收货地址:广东省广州市白云区太和镇"
                        android:textColor="#484C4F"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_dingdan_address"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/img_address"
                        android:text="(收货不便时，可选择免费呆受货服务)"
                        android:textColor="#EC4C68"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/right_img" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bbbbbb" />

                <LinearLayout
                    android:id="@+id/re_address"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    >

                    <View
                        android:layout_width="42dp"
                        android:layout_height="33dp"
                        android:background="@mipmap/add_address_img"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        ></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加地址"
                        android:textColor="#484C4F"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@mipmap/dizhi_img" />

                //配送方式

                <RelativeLayout
                    android:id="@+id/send_ways_choose"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="配送方式"
                        android:textColor="#707678"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/img_peisongfangshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/right_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_peisongfangshi"
                        android:text="请选择物流"
                        android:textColor="#B3B3B3"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>

                //支付方式

                <RelativeLayout
                    android:id="@+id/pay_ways_choose"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="支付方式"
                        android:textColor="#707678"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/img_zhifufangshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/right_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_zhifufangshi"
                        android:text="未选择"
                        android:textColor="#B3B3B3"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>


                //分期支付

                <RelativeLayout
                    android:id="@+id/re_fenqipay"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="分期支付"
                        android:textColor="#707678"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/img_fenqizhifu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/right_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_fenqizhifu"
                        android:text="【激活分期】免息购买"
                        android:textColor="#B3B3B3"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>

                //使用积分

                <RelativeLayout
                    android:id="@+id/re_use_code"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="使用积分"
                        android:textColor="#707678"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/img_use_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/right_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_use_jifen"
                        android:text="有可用积分"
                        android:textColor="#B3B3B3"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>


                //优惠券

                <RelativeLayout
                    android:id="@+id/re_youhuijuan"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="优惠券"
                        android:textColor="#707678"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/img_youhuiquan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/right_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/img_youhuiquan"
                        android:text="有可用券"
                        android:textColor="#B3B3B3"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/tv_liuyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="买家留言"
                        android:textColor="#707678"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_below="@id/tv_liuyan"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp"
                        android:gravity="top"
                        android:textColorHint="#A2A2A2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape"
                        android:hint="  说说您的要求和注意事项..." />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></View>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/tv_heji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="15sp"
                android:textColor="#838587"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tv_dingdan_all_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥153"
                android:textSize="14sp"
                android:textColor="#ED0219"
                android:layout_toRightOf="@id/tv_heji"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/tv_jifen_dikou_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券/积分抵扣：¥15"
                android:textColor="#A9A9A9"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tv_dingdan_all_pay"
                />

            <TextView
                android:id="@+id/tv_yingfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付:"
                android:textSize="15sp"
                android:textColor="#838587"
                android:layout_below="@id/tv_jifen_dikou_num"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥138"
                android:textSize="14sp"
                android:textColor="#ED0219"
                android:layout_below="@id/tv_jifen_dikou_num"
                android:layout_toRightOf="@id/tv_yingfu"
                android:layout_marginLeft="15dp"
                />

            <Button
                android:id="@+id/btn_tijiao_dingdan"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:background="#EE0119"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
