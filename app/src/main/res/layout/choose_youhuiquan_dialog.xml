<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textSize="17sp"
            android:textColor="#5B5C68"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/clouse_fenqi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/guanbi_use_jifen"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/che1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/use_jifen_chexbok"
            android:button="@null"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省50元:组合优惠"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/che1"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#5B5C68"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(订单金额满688可使用)"
            android:textSize="13sp"
            android:textColor="#5B5C68"
            android:layout_below="@id/che1"
            android:layout_toRightOf="@id/che1"
            android:layout_marginLeft="12dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/che2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/use_jifen_chexbok"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省20元:组合优惠"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/che2"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#5B5C68"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(订单金额满288可使用)"
            android:textSize="13sp"
            android:textColor="#5B5C68"
            android:layout_below="@id/che2"
            android:layout_toRightOf="@id/che2"
            android:layout_marginLeft="12dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/che3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/use_jifen_chexbok"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省10元:组合优惠"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/che3"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#5B5C68"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(订单金额满688可使用)"
            android:textSize="13sp"
            android:textColor="#5B5C68"
            android:layout_below="@id/che3"
            android:layout_toRightOf="@id/che3"
            android:layout_marginLeft="12dp"
            />

    </RelativeLayout>



    <Button
        android:id="@+id/btn_do_fenqi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D02022"
        android:layout_marginTop="60dp"
        android:text="关闭"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        />


</LinearLayout>
