<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/register_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确认亲密付订单"
                    android:textColor="#696969"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/img_dingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/mianmo_gouwuche" />

                <TextView
                    android:id="@+id/tv_dingdan_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/img_dingdan"
                    android:text="包邮品驰专柜进口韩国面膜保湿补水正品女士祛痘疤去印修复蚕丝贴"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_dingdan_yanse_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dingdan_message"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_dingdan"
                    android:text="颜色分类:韩国5片装"
                    android:textColor="#AEAEAE"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_dingdan_sand_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dingdan_yanse_num"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_dingdan"
                    android:text="发货时间:卖家承诺24小时内发货"
                    android:textColor="#EC4C68"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_dingdan_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dingdan_sand_time"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_dingdan"
                    android:text="¥130.80"
                    android:textColor="#EC4C68"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:text="x1"
                    android:textColor="#6E6E73"
                    android:textSize="14sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/dingdan_address" />

                <TextView
                    android:id="@+id/tv_dingdan_shouhuoren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/img_address"
                    android:text="选择收货人(选择幂好友)"
                    android:textColor="#9B9B9B"
                    android:textSize="19sp" />

                <CheckBox
                    android:id="@+id/qinmifu_tixing"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_below="@id/tv_dingdan_shouhuoren"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/img_address"
                    android:background="@drawable/qinmifu_tixing_chexbok"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:id="@+id/tv_dingdan_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dingdan_shouhuoren"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/qinmifu_tixing"
                    android:text="提醒好友"
                    android:textColor="#9B9B9B"
                    android:textSize="13sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right_img" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#bbbbbb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/re_heka"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:text="亲情贺卡"
                        android:textColor="#E85150"
                        android:textSize="13sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F5F5F5"
                        android:text="友情贺卡"
                        android:textColor="#8D8D8D"
                        android:textSize="13sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F5F5F5"
                        android:text="love贺卡"
                        android:textColor="#8D8D8D"
                        android:textSize="13sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F5F5F5"
                        android:text="其他贺卡"
                        android:textColor="#8D8D8D"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_heka"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/re_heka"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/img_heka" />


                <RelativeLayout
                    android:id="@+id/hekaliuyan_re"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/img_heka">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="贺卡留言"
                        android:textColor="#777A7B"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_dayin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="打印"
                        android:textColor="#8D8D8D"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/check_dayin"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@id/tv_dayin"
                        android:background="@drawable/qinmifu_tixing_chexbok"
                        android:button="@null" />


                    <TextView
                        android:id="@+id/tv_shouxie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="55dp"
                        android:layout_toLeftOf="@id/check_dayin"
                        android:text="手写"
                        android:textColor="#8D8D8D"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/check_shouxie"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@id/tv_shouxie"
                        android:background="@drawable/qinmifu_tixing_chexbok"
                        android:button="@null" />
                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/hekaliuyan_re"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:hint="说说您的要求和注意事项..."
                    android:textColorHint="#A2A2A2"
                    android:textSize="13sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#bbbbbb" />

            //配送方式

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="配送方式"
                    android:textColor="#707678"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_peisongfangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_peisongfangshi"
                    android:text="请选择物流"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"></View>

            //支付方式

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="支付方式"
                    android:textColor="#707678"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_zhifufangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_zhifufangshi"
                    android:text="未选择"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"></View>


            //分期支付

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="分期支付"
                    android:textColor="#707678"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_fenqizhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_fenqizhifu"
                    android:text="【激活分期】免息购买"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"></View>

            //使用积分

            <RelativeLayout
                android:id="@+id/re_use_code"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="使用积分"
                    android:textColor="#707678"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_use_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_use_jifen"
                    android:text="有可用积分"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"></View>


            //优惠券

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="优惠券"
                    android:textColor="#707678"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_youhuiquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_youhuiquan"
                    android:text="有可用券"
                    android:textColor="#B3B3B3"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tv_liuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="买家留言"
                    android:textColor="#707678"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/tv_liuyan"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape"
                    android:hint="说说您的要求和注意事项..."
                    android:textColorHint="#A2A2A2"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"></View>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">


        <TextView
            android:id="@+id/tv_heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="合计:"
            android:textColor="#838587"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dingdan_all_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/tv_heji"
            android:text="¥153"
            android:textColor="#ED0219"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_jifen_dikou_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dingdan_all_pay"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:text="优惠券/积分抵扣：¥15"
            android:textColor="#A9A9A9" />

        <TextView
            android:id="@+id/tv_yingfu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jifen_dikou_num"
            android:layout_marginLeft="15dp"
            android:text="应付:"
            android:textColor="#838587"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jifen_dikou_num"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_yingfu"
            android:text="¥138"
            android:textColor="#ED0219"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_qinmifu_tijiao"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#EE0119"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </RelativeLayout>
</RelativeLayout>
