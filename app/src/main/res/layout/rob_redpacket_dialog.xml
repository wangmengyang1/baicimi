<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rob_redpacket_dialog_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/rob_redpacket_dialog_background"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/rob_redpacket_dialog_image_01"
                android:scaleType="fitXY"
                />


            <ImageView
                android:id="@+id/rob_redpacket_dialog_userimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_packet_getthe_details_adapter_image_02"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                />

            <LinearLayout
                android:id="@+id/rob_redpacket_dialog_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rob_redpacket_dialog_userimage"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈坤"
                    android:textSize="13sp"
                    android:textColor="#fbf106"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="的红包"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rob_redpacket_dialog_ischecklayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/rob_redpacket_dialog_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/rob_redpacket_dialog_congratulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜你"
                    android:textColor="#fbf106"
                    />


                <LinearLayout
                    android:id="@+id/rob_redpacket_dialog_layout_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="18sp"
                        android:textColor="#fbf106"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/rob_redpacket_dialog_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包金额已存入幂钱包"
                    android:textColor="#fbf106"
                    android:layout_marginTop="30dp"
                    android:textSize="13sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rob_redpacket_dialog_ischecklayout_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/rob_redpacket_dialog_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="很遗憾没抢到红包"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜发财，再接再厉~"
                    android:textColor="#fbf106"
                    android:typeface="monospace"
                    android:layout_marginTop="5dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/rob_redpacket_dialog_background"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已关注"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@陈坤"
                    android:textColor="#fbf106"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/rob_redpacket_dialog_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看红包记录"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@+id/rob_redpacket_dialog_background"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/rob_redpacket_dialog_flaunt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="嘚瑟一下"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="13sp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rob_redpacket_dialog_taxeview_shape_first"
                    />
                <TextView
                    android:id="@+id/rob_redpacket_dialog_rob"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发红包"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rob_redpacket_dialog_taxeview_shape_second"
                    />


            </LinearLayout>




        </RelativeLayout>
        <ImageView
            android:id="@+id/rob_redpacket_dialog_dissmess"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_succeed_image"
            android:layout_toRightOf="@+id/rob_redpacket_dialog_relative"
            android:padding="4dp"
            android:layout_marginLeft="-10dp"
            />
    </RelativeLayout>

</LinearLayout>