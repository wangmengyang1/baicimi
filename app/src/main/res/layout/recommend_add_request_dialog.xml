<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/order_form_fragment_clicle_shape"
        >

        <TextView
            android:id="@+id/recommend_add_request_dialog_lible"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="抱歉，推荐失败"
            android:textSize="13sp"
            android:textColor="#737373"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />


        <ImageView
            android:id="@+id/recommend_add_request_dialog_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/image_convertion_04"
            android:layout_below="@+id/recommend_add_request_dialog_lible"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />



        <TextView
            android:id="@+id/recommend_add_request_dialog_content"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="此人已被推荐\n请勿重复推荐"
            android:layout_below="@+id/recommend_add_request_dialog_image"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="#737373"
            android:gravity="center"
            />



        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/recommend_add_request_dialog_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/recommend_add_request_dialog_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回检查"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:background="#737373"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>