<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/new_user_listview_adapter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/new_user_listview_01"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/new_user_listview_adapter_image"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/new_user_listview_adapter_lible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="眼线笔"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/new_user_listview_adapter_lible_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="MI-HDFJRWS"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:id="@+id/new_user_listview_adapter_lible_state"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="刚刚兑换"
                    android:textColor="@color/red"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/new_user_listview_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/new_user_listview_adapter_new_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分10"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:id="@+id/new_user_listview_adapter_integral_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（限量10份/每天）"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/new_user_listview_adapter_exchange_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5468215人兑换"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/new_user_listview_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_user_listview_adapter_image"
            android:layout_alignParentRight="true"
            android:src="@mipmap/gouwudai_img"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>

</LinearLayout>