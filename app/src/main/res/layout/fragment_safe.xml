<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/login_title"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@mipmap/register_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="账户与安全"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/chuangkou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/cehua" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#EEEEEE"></View>

            <ImageView
                android:id="@+id/login_guanggao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_title"
                android:layout_marginTop="-30dp"
                android:src="@mipmap/login_title" />

            <View
                android:id="@+id/vv1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-30dp"
                android:background="#EEEEEE"></View>

            <RelativeLayout
                android:id="@+id/gai_password"
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/gai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="23dp"
                    android:textSize="17sp"
                    android:textColor="#1C2E3A"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CECECE"
                    android:text="*建议您定期更改密码以保护账户安全"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                  android:layout_below="@id/gai"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_img"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CECECE"
                ></View>

            <RelativeLayout
                android:id="@+id/phone_renzheng"
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机认证"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#1C2E3A"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_img"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上开启"
                    android:textSize="15sp"
                    android:textColor="#E44B4C"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CECECE"
                ></View>


            <RelativeLayout
                android:id="@+id/zhifu_password"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/zhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付密码"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#1C2E3A"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_img"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    />


                />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#CECECE"
                ></View>


            <RelativeLayout
                android:id="@+id/true_name"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/shiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#1C2E3A"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_img"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    />


                />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CECECE"
                ></View>


        </LinearLayout>


</RelativeLayout>
