<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/wenti_detalis_online_server_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="4dp"
            android:src="@mipmap/register_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="在线咨询"
            android:textColor="#5C5C5C"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进店"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/white"
            android:background="@drawable/wenti_details_online_server_entrance_store_shape"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="@color/class_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:48"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/wenti_details_online_server_lible_textview_shape"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/wenti_details_online_server_image"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/teacher_status_register_fragment_image_02"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/wenti_details_online_server_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gap 男童 纯棉活力校园风logo贴标圆领休闲长袖T恤864951"
                    android:layout_toRightOf="@+id/wenti_details_online_server_image"
                    android:layout_marginRight="20dp"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/wenti_details_online_server_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥159.00"
                    android:layout_toRightOf="@+id/wenti_details_online_server_image"
                    android:layout_alignLeft="@+id/wenti_details_online_server_content"
                    android:layout_below="@+id/wenti_details_online_server_content"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textColor="#d45721"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送宝贝"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="12sp"
                    android:textColor="#d45721"
                    android:layout_below="@+id/wenti_details_online_server_money"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/wenti_details_online_server_dimess_shape"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gap官方旗舰店：v8为您服务"
                android:textSize="12sp"
                android:padding="1dp"
                android:background="@drawable/wenti_details_online_server_lible_textview_shape"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="我想"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/wenti_details_online_server_textview_shape"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="买家秀"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/wenti_details_online_server_textview_shape"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="优惠券"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/wenti_details_online_server_textview_shape"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="店铺上新"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/wenti_details_online_server_textview_shape"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="订单查询"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/voice_black_image"
                android:layout_marginLeft="15dp"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wenti_details_online_server_edittext_shape"
                android:layout_marginLeft="15dp"

                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/smilingface_black_image"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add_black_image_ss"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>