<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/order_form_fragment_clicle_shape"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <LinearLayout
            android:id="@+id/automatic_selection_layout_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            >

            <CheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector_two"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优先选择我喜欢的品牌"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:textColor="#737373"
                />

            <TextView
                android:id="@+id/automatic_selection_dialog_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="设置"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="#eeeeee"
                android:layout_marginLeft="8dp"
                android:textColor="#737373"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/automatic_selection_layout_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_below="@+id/automatic_selection_layout_01"
            android:layout_marginTop="6dp"
            >

            <CheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector_two"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优先选择最高积分的广告投放"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:textColor="#737373"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/automatic_selection_layout_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:layout_below="@+id/automatic_selection_layout_02"
            android:layout_marginTop="6dp"
            >

            <CheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/checkbox_selector_two"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不接受任何广告"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:textColor="#737373"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/automatic_selection_diessmess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#eeeeee"
            android:layout_below="@+id/automatic_selection_layout_03"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#737373"
            />


    </RelativeLayout>

</LinearLayout>