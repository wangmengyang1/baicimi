<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/miwalldt_discount_coupon_firstitme_four_layout_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/coupon_firstitme_group_purchase_image_04"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="45dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="消费满100元可用"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-05至2016-04-10"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/miwalldt_discount_coupon_firstitme_four_layout_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_alignTop="@+id/miwalldt_discount_coupon_firstitme_four_layout_03"

            >

            <ImageView
                android:id="@+id/miwalldt_discount_coupon_firstitme_four_image_04"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/coupon_firstitme_group_purchase_image_04"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="45dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="消费满100元可用"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-05至2016-04-10"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/miwalldt_discount_coupon_firstitme_four_layout_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/miwalldt_discount_coupon_firstitme_four_image_04"
                android:layout_marginBottom="15dp"
                >


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/miwalldt_discount_coupon_firstitme_four_particulars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="了解详情"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@color/white"
                        android:textSize="13sp"
                        android:textColor="#eb6100"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="品类限制：针对所有会员，实用于MICI所有品牌与商品。"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_above="@+id/miwalldt_discount_coupon_firstitme_four_layout_05"
                android:layout_marginBottom="8dp"
                />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>