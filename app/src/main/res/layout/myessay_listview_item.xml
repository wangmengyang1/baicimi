<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/rose_zan_lv"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/rose_zan_lv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/rose_zan_lv"
        android:text="转发文章：@百世加冰"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/rose_zan_lv"
        android:text="心善，心正，心宽...一切从心开始"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/rose_zan_lv"
        android:layout_marginRight="10dp"
        android:text="一个人行善事，能经常帮助弱者，使他人摆脱困境，心中必会勇气欣慰之感。一个人坚信自己活着，这就会为自己的一种精神鼓舞，会使人轻松愉快"
        android:textSize="8sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/rose_zan_lv"
        android:text="2016-04-13   18：:00"
        android:textSize="9sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:text="3123"
        android:textSize="9sp" />


    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp"
        android:layout_marginTop="25dp"
        android:background="@mipmap/dingzi"></View>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/zan_set"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/shuben"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginRight="35dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/zhuanfa_img1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginRight="60dp"
        />








</RelativeLayout>
