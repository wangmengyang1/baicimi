<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        
        <ImageView
            android:id="@+id/user_center_home_page_adapter_imageurl"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/user_center_home_page_adapter_image_01"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/user_center_home_page_adapter_lbile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="@color/black"
            android:layout_below="@+id/user_center_home_page_adapter_imageurl"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:textSize="12sp"
            />
        
    </RelativeLayout>

</LinearLayout>