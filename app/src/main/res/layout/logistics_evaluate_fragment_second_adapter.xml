<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/logistics_evaluate_fragment_second_adapter_imageview"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/evaluate_management_image_03"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/logistics_evaluate_fragment_second_adapter_lible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="链条式连帽运动衫"
                    android:layout_toRightOf="@+id/logistics_evaluate_fragment_second_adapter_imageview"
                    android:layout_marginLeft="25dp"
                    android:textColor="#5e5c5f"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/logistics_evaluate_fragment_second_adapter_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白色 编号-5644/216"
                    android:textSize="12sp"
                    android:layout_below="@+id/logistics_evaluate_fragment_second_adapter_lible"
                    android:layout_alignLeft="@+id/logistics_evaluate_fragment_second_adapter_lible"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/logistics_evaluate_fragment_second_adapter_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L(175/96A)"
                    android:textColor="#5e5c5f"
                    android:layout_below="@+id/logistics_evaluate_fragment_second_adapter_context"
                    android:layout_alignLeft="@+id/logistics_evaluate_fragment_second_adapter_context"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/logistics_evaluate_fragment_second_adapter_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥339.00"
                    android:textColor="#3e3e3f"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/logistics_evaluate_fragment_second_adapter_imageview"
                    />


                <TextView
                    android:id="@+id/logistics_evaluate_fragment_second_adapter_integer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="990积分"
                    android:textSize="12sp"
                    android:layout_alignLeft="@+id/logistics_evaluate_fragment_second_adapter_lible"
                    android:layout_alignBottom="@+id/logistics_evaluate_fragment_second_adapter_imageview"
                    android:layout_marginBottom="4dp"
                    android:visibility="invisible"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="中通快递"
                android:layout_marginTop="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="派送员：李四"
                android:layout_marginTop="6dp"
                />



        </LinearLayout>




    </RelativeLayout>

</LinearLayout>