<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/order_form_fragment_clicle_shape"
        >

        <TextView
            android:id="@+id/order_form_fragment_clicle_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/order_form_fragment_clicle_cotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您确定取消此订单吗？"
            android:layout_centerInParent="true"
            android:layout_below="@+id/order_form_fragment_clicle_lible"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/order_form_fragment_clicle_cotent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/order_form_fragment_clicle_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                />

            <View
                android:layout_width="0.4dp"
                android:layout_height="18dp"
                android:background="@color/viewfinder_mask"
                />
            <TextView
                android:id="@+id/order_form_fragment_clicle_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>