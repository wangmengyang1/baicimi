<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#efefef"
        >

        <ImageView
            android:id="@+id/my_express_fragment_adapter_imageurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_integral_fragment_15"
            />


        <TextView
            android:id="@+id/my_express_fragment_adapter_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="已签收"
            android:layout_toRightOf="@+id/my_express_fragment_adapter_imageurl"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/my_express_fragment_adapter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="布艺抱枕沙发靠垫布艺抱枕沙发靠垫"
            android:layout_toRightOf="@+id/my_express_fragment_adapter_imageurl"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:layout_below="@+id/my_express_fragment_adapter_state"
            android:layout_marginTop="6dp"
            />


        <TextView
            android:id="@+id/my_express_fragment_adapter_expressage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="圆通快递：721006012089"
            android:layout_toRightOf="@+id/my_express_fragment_adapter_imageurl"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:layout_below="@+id/my_express_fragment_adapter_content"
            android:layout_marginTop="6dp"
            />



        <TextView
            android:id="@+id/my_express_fragment_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="2017/08/09"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</LinearLayout>