<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/look_logistics_evaluate_courier_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_image_black"
            android:padding="4dp"
            android:layout_marginLeft="15dp"

            />

        <TextView
            android:id="@+id/look_logistics_evaluate_courier_lible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="物流评价"
            android:textColor="#737373"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:textSize="16sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#737373"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:id="@+id/look_loginstice_evaluate_courier_userimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image_userimage_01"
            />

        <TextView
            android:id="@+id/look_loginstice_evaluate_courier_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中通快递"
            android:layout_toRightOf="@+id/look_loginstice_evaluate_courier_userimage"
            android:layout_marginTop="50dp"
            android:textColor="#737373"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/look_loginstice_evaluate_courier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派送员：李四"
            android:textSize="13sp"
            android:layout_below="@+id/look_loginstice_evaluate_courier_lible"
            android:layout_alignLeft="@+id/look_loginstice_evaluate_courier_lible"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/look_loginstice_evaluate_courier_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话：12345687465"
            android:textSize="13sp"
            android:layout_below="@+id/look_loginstice_evaluate_courier_name"
            android:layout_alignLeft="@+id/look_loginstice_evaluate_courier_name"
            android:layout_marginTop="6dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="15dp"
            >

            <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:background="@drawable/look_loginstice_evaluate_checkbox_selector"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评"
                android:textSize="13sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            >

            <CheckBox
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:button="@null"
                android:background="@drawable/look_loginstice_evaluate_checkbox_selector_second"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="差评"
                android:textSize="13sp"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:id="@+id/look_loginstice_evaluate_courier_layout_01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <CheckBox
                android:id="@+id/look_loginstice_evaluate_courier_checkbox_01"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/payment_adency_gov_child_adapter_first_checkbox_selector"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="准时守信"
                android:textSize="13sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/look_loginstice_evaluate_courier_layout_02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <CheckBox
                android:id="@+id/look_loginstice_evaluate_courier_checkbox_02"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/payment_adency_gov_child_adapter_first_checkbox_selector"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="态度好"
                android:textSize="13sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/look_loginstice_evaluate_courier_layout_03"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <CheckBox
                android:id="@+id/look_loginstice_evaluate_courier_checkbox_03"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/payment_adency_gov_child_adapter_first_checkbox_selector"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货上门"
                android:textSize="13sp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:id="@+id/look_loginstice_evaluate_courier_layout_04"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <CheckBox
                android:id="@+id/look_loginstice_evaluate_courier_checkbox_04"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/payment_adency_gov_child_adapter_first_checkbox_selector"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送前有预约"
                android:textSize="13sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/look_loginstice_evaluate_courier_layout_05"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <CheckBox
                android:id="@+id/look_loginstice_evaluate_courier_checkbox_05"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/payment_adency_gov_child_adapter_first_checkbox_selector"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="速度快"
                android:textSize="13sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/look_loginstice_evaluate_courier_layout_06"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            >


            <CheckBox
                android:id="@+id/look_loginstice_evaluate_courier_checkbox_06"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/payment_adency_gov_child_adapter_first_checkbox_selector"
                android:checked="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外包装完好"
                android:textSize="13sp"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#737373"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:hint="请向我们提供宝贵的意见.(限100字)"
        android:gravity="top"
        android:textSize="13sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#737373"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认提交"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:padding="4dp"
        android:background="#737373"
        android:textColor="@color/white"
        />

</LinearLayout>