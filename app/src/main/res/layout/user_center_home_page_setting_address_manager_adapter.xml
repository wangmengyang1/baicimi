<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/user_center_home_page_setting_address_manager_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#535353"
            android:text="张三"
            />
        <TextView
            android:id="@+id/user_center_home_page_setting_address_manager_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#535353"
            android:text="1380000000"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/user_center_home_page_setting_address_manager_adapter_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#535353"
            android:layout_below="@+id/user_center_home_page_setting_address_manager_adapter_name"
            android:layout_marginTop="10dp"
            android:text="中国广东省广州市广州市详细地址详细地址A大厦18F1808室     1380000000"
            />


        <View
            android:id="@+id/user_center_home_page_setting_address_manager_adapter_view"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#eeeeee"
            android:layout_below="@+id/user_center_home_page_setting_address_manager_adapter_address"
            android:layout_marginTop="8dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_below="@+id/user_center_home_page_setting_address_manager_adapter_view"
            android:layout_marginTop="10dp"
            >

            <CheckBox
                android:id="@+id/user_center_home_page_setting_address_manager_adapter_checkbox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/user_center_home_page_setting_address_manager_adapter_checkbox"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#535353"
                android:text="设为默认"
                android:layout_marginLeft="8dp"
                />


            <LinearLayout
                android:id="@+id/user_center_home_page_setting_address_manager_adapter_compile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/read_image"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#535353"
                    android:text="编辑"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/user_center_home_page_setting_address_manager_adapter_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/lajitong"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#535353"
                    android:text="删除"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>