<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#efefef"
        >


        <ImageView
            android:id="@+id/tryout_apply_forme_adapter_imageurl"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:src="@drawable/tryout_apply_forme_image_01"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/tryout_apply_forme_adapter_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="¥99.00"
            android:layout_toRightOf="@+id/tryout_apply_forme_adapter_imageurl"
            android:layout_marginLeft="8dp"
            />


        <TextView
            android:id="@+id/tryout_apply_forme_adapter_indentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="订单号 480000"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tryout_apply_forme_adapter_lible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魅族PRO 6 Plus 4GB + 64GB 公开版\n月光银 移动联通4G手机 双卡双待"
            android:textSize="13sp"
            android:layout_below="@+id/tryout_apply_forme_adapter_money"
            android:layout_alignLeft="@+id/tryout_apply_forme_adapter_money"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:id="@+id/tryout_apply_forme_adapter_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="申请中"
            android:layout_below="@+id/tryout_apply_forme_adapter_lible"
            android:layout_alignLeft="@+id/tryout_apply_forme_adapter_lible"
            android:layout_marginTop="15dp"
            />


        <TextView
            android:id="@+id/tryout_apply_forme_adapter_appplynumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="试用总数：20"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tryout_apply_forme_adapter_state"
            />



        <TextView
            android:id="@+id/tryout_apply_forme_adapter_applyFor"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="查看"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/tryout_apply_forme_adapter_appplynumber"
            android:layout_marginBottom="4dp"
            android:background="#cccccc"
            android:textColor="#737373"
            />

    </RelativeLayout>

</LinearLayout>