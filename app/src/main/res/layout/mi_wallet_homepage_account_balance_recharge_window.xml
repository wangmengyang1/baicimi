<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#eeeeee"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >



            <ImageView
                android:id="@+id/mi_wallet_homepage_account_balance_recharge_window_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/error_image"
                android:padding="4dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="选择付款方式"
                android:layout_centerInParent="true"
                />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/user_integral_fragment_code_second_image_11"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#b5b5b5"
            />


        <LinearLayout
            android:id="@+id/mi_wallet_homepage_account_balance_recharge_window_checked"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_integral_fragment_code_second_image_09"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="中国建设银行储蓄卡（6775）"
                    android:textColor="#5f5f5f"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="银行单笔限额10000.00元"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user_integral_fragment_code_second_image_12"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#b5b5b5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:src="@drawable/user_integral_fragment_code_second_image_13"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="添加银行卡付款"
                    android:textColor="#5f5f5f"
                    />

            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user_integral_fragment_code_second_image_10"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#b5b5b5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />


        <View
            android:layout_width="1dp"
            android:layout_height="100dp"/>


    </LinearLayout>

</LinearLayout>