<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/cela_listview_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/meigui_img"
            android:padding="1dp"
            />
        <TextView
            android:id="@+id/cela_listview_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="美妆用品"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cela_listview_linearlayou_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_02"
        >
        <ListView
            android:id="@+id/cela_listview_category_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_gravity="center"
            ></ListView>

    </LinearLayout>



</LinearLayout>