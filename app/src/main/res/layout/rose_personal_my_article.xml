<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_01"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_02"
                    android:padding="6dp"
                    android:layout_margin="4dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textColor="#010101"
                android:text="My hometown"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="A lot of foreigners were enjoying the sunshine. When we got to the hotel and got off all the luggage, I rushed to the beach and took some funny pictures. The weather was so nice and I swam for a while. My parents watched me all thetime. We laid on the beach and enjoyed the great momentas other people did. ......"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#b5b5b5"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="昨天19：20  来自全球生活汇"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="阅读原文"

                    />

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"

                    >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rose_personal_fragment_picture_image_03"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="123"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            />



                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="-8dp"
                            android:text="10"
                            android:textColor="#ff0000"
                            android:background="@drawable/rose_personal_my_picture_textivew_circle"
                            android:gravity="center"
                            android:textSize="12sp"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#737373"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rose_personal_fragment_picture_image_04"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="123"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            />

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="-8dp"
                            android:text="51"
                            android:textColor="#ff0000"
                            android:background="@drawable/rose_personal_my_picture_textivew_circle"
                            android:gravity="center"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#737373"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rose_personal_fragment_picture_image_05"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="123"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="-8dp"
                            android:text="1"
                            android:textColor="#ff0000"
                            android:background="@drawable/rose_personal_my_picture_textivew_circle"
                            android:gravity="center"
                            android:textSize="12sp"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#737373"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rose_personal_fragment_picture_image_02"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="123"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            />


                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="-8dp"
                            android:text="1"
                            android:textColor="#ff0000"
                            android:background="@drawable/rose_personal_my_picture_textivew_circle"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#737373"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rose_personal_fragment_picture_image_06"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="123"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            />



                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#737373"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/rose_personal_fragment_picture_image_07"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="123"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            />



                    </LinearLayout>






                </LinearLayout>




            </HorizontalScrollView>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                >


                <ImageView
                    android:id="@+id/rose_personal_my_article_userimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_10"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/rose_personal_my_article_userimage"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#010101"
                        android:text="GERRY"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Guangzhou,China"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>


                <ImageView
                    android:id="@+id/rose_personal_my_article_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_08"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/rose_personal_my_article_userimage"
                    android:padding="4dp"
                    />

                <ImageView
                    android:id="@+id/rose_personal_my_article_attention"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_04"
                    android:layout_alignBottom="@+id/rose_personal_my_article_userimage"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/rose_personal_my_article_menu"
                    />

                <ImageView
                    android:id="@+id/rose_personal_my_article_collect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_02"
                    android:layout_alignBottom="@+id/rose_personal_my_article_userimage"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/rose_personal_my_article_attention"
                    />


                <ImageView
                    android:id="@+id/rose_personal_my_article_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/rose_personal_fragment_picture_image_05"
                    android:layout_alignBottom="@+id/rose_personal_my_article_userimage"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:layout_toLeftOf="@+id/rose_personal_my_article_collect"
                    />



            </RelativeLayout>



            <View
                android:layout_width="1dp"
                android:layout_height="80dp"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>