<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/mi_code_brank_image_21"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止到2018年2月，积分总额：2.02亿，新增积分：200万"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="4dp"
            android:background="#737373"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费者所持积分：6000万"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费者储蓄积分：7200万"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业所持积分：7200万"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业储蓄积分：7200万"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行储蓄积分：7200万"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广告投入积分：2800万"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了解积分流向详情"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="@drawable/pryment_adency_fragment_government_edittext_shape"
            />


    </LinearLayout>



</LinearLayout>