<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/fragment_seven_mon_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:title_height="0dp"
                ></com.youth.banner.Banner>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EEEEEE"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_pingzhituijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="明星推荐"
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/tv_pingzhituijian"
                    android:background="#808080"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_pingzhituijian"
                    android:text="Star Product recommendation"
                    android:textColor="#D0D0D0"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_seven_mon_new_01"
                    android:layout_width="0dp"
                    android:layout_height="176dp"
                    android:layout_weight="7"
                    android:src="@mipmap/new_july_2"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_seven_mon_new_02"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:background="@mipmap/new_july_3"
                        ></ImageView>


                    <ImageView
                        android:id="@+id/fragment_seven_mon_new_03"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/new_july_4"
                        ></ImageView>

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EEEEEE"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_jingxuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="热卖单品"
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/tv_jingxuan"
                    android:background="#808080"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_jingxuan"
                    android:text="Hot sigle procudt"
                    android:textColor="#D0D0D0"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"></View>

            <RelativeLayout
                android:id="@+id/rr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <com.baicimi.ui.PersonUserPagerSlidingTabStrip
                    android:id="@+id/my_head_sevenmons"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_centerHorizontal="true"
                    app:pstsDividerColor="#00ffffff"
                    app:pstsIndicatorColor="#fff"
                    app:pstsIndicatorHeight="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:pstsShouldExpand="true"
                    app:pstsTabSelectTextColor="@color/common_text_tab"
                    app:pstsTabSelectTextSize="12sp"
                    app:pstsTabTextSize="18sp"></com.baicimi.ui.PersonUserPagerSlidingTabStrip>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rr1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="850dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_sevenmons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EEEEEE"></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EEEEEE"></View>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
