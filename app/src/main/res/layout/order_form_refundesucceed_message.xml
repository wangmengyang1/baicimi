<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >

        <ImageView
            android:id="@+id/order_form_refundesucceed_message_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_image_black"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/by_stages_fragment_lible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="退款详情"
            android:textColor="#737373"
            android:gravity="center"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/brand_fragment_second_image_13"
            android:padding="6dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#737373"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退款详情！"
        android:textSize="15sp"
        android:textColor="#737373"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款金额：48元"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textSize="13sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款途径：退回至银行卡"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看收支记录"
                android:textSize="13sp"
                />

            <View
                android:layout_width="80dp"
                android:layout_height="0.6dp"
                android:background="#737373"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款详情："
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="13sp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#eeeeee"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已退回至中国建设银行（8315）"
            android:textSize="13sp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >

            <View
                android:id="@+id/order_form_refundesucceed_view_center_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/order_form_refundesucceed_message_view_shape"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                />
            <View
                android:id="@+id/order_form_refundesucceed_view_lift_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/order_form_refundesucceed_message_view_shape"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                />

            <View
                android:id="@+id/order_form_refundesucceed_view_right_view"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/order_form_refundesucceed_message_view_shape"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#ff0000"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                />


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="退款发往银行06月29日02点20分"
                android:textSize="12sp"
                android:layout_below="@+id/order_form_refundesucceed_view_lift_view"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="银行处理06月29日02点20分"
                android:textSize="12sp"
                android:layout_below="@+id/order_form_refundesucceed_view_center_view"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                />


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="银行入账如未到账请联系中国建设银行06月29日02点20分"
                android:textSize="12sp"
                android:layout_below="@+id/order_form_refundesucceed_view_center_view"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>