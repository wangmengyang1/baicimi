<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        >

        <ImageView
            android:id="@+id/horizontallayout_item_adapter_imageurl"
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:src="@drawable/tyrout_applyfor_fragment_image_09"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9f9f9"
            android:layout_below="@+id/horizontallayout_item_adapter_imageurl"

            />

        <TextView
            android:id="@+id/horizontallayout_item_adapter_lible"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="官方授权 自然堂乐园补水保湿"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_below="@+id/horizontallayout_item_adapter_imageurl"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:id="@+id/horizontallayout_item_adapter_laouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/horizontallayout_item_adapter_lible"
            android:layout_marginTop="4dp"
            >

            <RelativeLayout
                android:id="@+id/horizontallayout_item_adapter_layout_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/horizontallayout_item_adapter_newmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥112.00"
                    android:textSize="12sp"
                    android:textColor="#9a9a9a"
                    />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#9a9a9a"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/horizontallayout_item_adapter_layout_02"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/horizontallayout_item_adapter_layout_02"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限量"
                    android:textSize="12sp"
                    android:textColor="#ce2538"
                    />
                <TextView
                    android:id="@+id/horizontallayout_item_adapter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="#ce2538"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="份"
                    android:textColor="#ce2538"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费试用"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:layout_below="@+id/horizontallayout_item_adapter_laouts"
            android:layout_marginTop="4dp"
            android:background="@drawable/horizontallayout_item_fragment_textview_shape"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/tryoutapply_for_adapter_fragment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/tag_image_gral"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/tryoutapply_for_adapter_fragment_tagnumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textSize="12sp"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="-2dp"
                />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>